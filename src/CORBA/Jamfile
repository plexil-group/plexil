
SubDir CORBA ;

if ! $(PLEXIL_CORBA_READY) {

PLEXIL_HOME = [ FDirName $(CORBA) $(DOTDOT) ] ;

HDRS += [ FDirName $(PLEXIL_HOME) universal-exec Exec ]
        [ FDirName $(PLEXIL_HOME) universal-exec Exec base ]
        [ FDirName $(PLEXIL_HOME) universal-exec Exec component ]
        [ FDirName $(PLEXIL_HOME) universal-exec TinyXml base ]
        [ FDirName $(PLEXIL_HOME) universal-exec Utils ]
        [ FDirName $(PLEXIL_HOME) universal-exec Utils base ]
        [ FDirName $(PLEXIL_HOME) universal-exec Utils component ]
        $(ACE_ROOT)
        $(TAO_ROOT)
        $(TAO_ROOT)/orbsvcs ;

# reference common library directories
LINKFLAGS += [ FLibDirFlags [ FDirName $(PLEXIL_HOME) universal-exec lib ] 
                            [ FDirName $(PLEXIL_HOME) interfaces lib ]
                            [ FDirName $(CORBA) lib ]
                            [ FDirName $(ACE_ROOT) lib ]
             ] ;

Module PlexilCorbaUtils ;

ModuleLibraries PlexilCorbaUtils :
    ACE TAO TAO_CosNaming
    TAO_AnyTypeCode # not found on ACE 5.4.6 and earlier
    TAO_PortableServer
    [ FVariantName PlexilUtils PlexilTinyXml : $(VARIANTS) ]
 ;

SubInclude CORBA base ;
SubInclude CORBA component ;

SubInclude CORBA EventChannelReporter ;

} # PLEXIL_CORBA_READY

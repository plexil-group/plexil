(plexil-plan
  (list-node "Root"
    (variables (integer "x" 0))
    (end-condition (= (intvar "x") 4))
    (list
      (assignment-node "One"
        (repeat-condition (< (intvar "x") 4))
        (assignment (intvar "x") (+ (intvar "x") 1)))
      (empty-node "Two"
        (repeat-condition true)
        (start-condition (iteration-successful "One"))))))


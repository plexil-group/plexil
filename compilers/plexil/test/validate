# Check environment variables
if [ ! $PLEXIL_HOME ]
then
    echo Error: Please set environment variable PLEXIL_HOME
    echo to the full pathname of your 'plexil' or 'trunk' directory.
    exit 1
fi

. ${PLEXIL_HOME}/scripts/plexil-setup.sh

SCHEMA_DIR=${PLEXIL_HOME}/schema
PLEXIL_COMPILER_DIR=${PLEXIL_HOME}/compilers/plexil

OUTEPX=${1/%.ple/.epx}
OUTFILE=${OUTEPX/input/output}

# Generate 
${PLEXIL_COMPILER_DIR}/PlexilCompiler --epx-only -o ${OUTFILE} $1
if [ $? -ne 0 ]
then
	echo Compilation of $1 failed.
	exit 1
fi

# Validate, redirecting output to stderr
xmllint --noout --schema ${SCHEMA_DIR}/extended-plexil.xsd ${OUTFILE} 1>&2
if [ $? -ne 0 ]
then
	echo Validation of ${OUTFILE} failed.
	exit 1
fi

exit 0

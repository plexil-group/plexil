namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  NodeTimepointValue
  | LookupNow
  | NodeRef
  | Tolerance
  | LT
  | PreconditionFailed
  | IterationEnded
  | MOD
  | BooleanVariable
  | DeclareArray
  | IntegerVariable
  | StateDeclaration
  | SkipCondition
  | BooleanValue
  | ResourceList
  | NOT
  | Finished
  | (notAllowed
     | element IterationFailed { node-reference })
  | Waiting
  | RealVariable
  | InOut
  | MessageReceived
  | Node
  | Timepoint
  | Failed
  | NodeList
  | LookupRHS
  | GE
  | NodeStateVariable
  | Pair
  | RepeatCondition
  | Request
  | PostCondition
  | NodeId
  | VariableDeclarations
  | NEInternal
  | StringVariable
  | LibraryNodeDeclaration
  | UncheckedSequence
  | NodeCommandHandleValue
  | MUL
  | InvariantCondition
  | IsKnown
  | ABS
  | SynchronousCommand
  | StartCondition
  | Executing
  | GlobalDeclarations
  | OnMessage
  | StringValue
  | OR
  | EndCondition
  | EQString
  | ArrayValue
  | GT
  | Wait
  | NodeFailureValue
  | DeclareVariable
  | Try
  | ArrayElement
  | Inactive
  | StringRHS
  | NumericRHS
  | BooleanRHS
  | CommandDeclaration
  | SUB
  | While
  | AND
  | EQInternal
  | NodeFailureVariable
  | Sequence
  | ParentFailed
  | PreCondition
  | Arguments
  | RealValue
  | Interface
  | LibraryNodeCall
  | NodeCommandHandleVariable
  | Concurrence
  | LookupOnChange
  | Return
  | If
  | NEString
  | ADD
  | Command
  | NodeBody
  | Succeeded
  | In
  | XOR
  | NENumeric
  | Update
  | Assignment
  | NodeStateValue
  | Concat
  | InvariantFailed
  | PostconditionFailed
  | SQRT
  | For
  | EQNumeric
  | Parameter
  | NodeOutcomeVariable
  | IntegerValue
  | Resource
  | NodeOutcomeValue
  | (notAllowed
     | element PlexilPlan {
         SourceLocators, GlobalDeclarations?, Action
       })
  | (notAllowed
     | element IterationSucceeded { node-reference })
  | EQBoolean
  | Name
  | NEBoolean
  | Alias
  | ArrayRHS
  | DIV
  | Lookup
  | OnCommand
  | LE
  | Skipped
LookupRHS =
  notAllowed
  | element LookupRHS { SourceLocators, LookupGroup }
XOR =
  notAllowed
  | element XOR { SourceLocators, BooleanExpression* }
PostconditionFailed =
  notAllowed
  | element PostconditionFailed { node-reference }
BooleanVariable =
  notAllowed
  | element BooleanVariable { NCName }
StringRHS =
  notAllowed
  | element StringRHS { SourceLocators, StringExpression }
Skipped =
  notAllowed
  | element Skipped { node-reference }
NodeStateVariable =
  notAllowed
  | element NodeStateVariable { node-reference }
NodeRef =
  notAllowed
  | element NodeRef {
      attribute dir {
        xsd:NMTOKEN "child"
        | xsd:NMTOKEN "sibling"
        | xsd:NMTOKEN "parent"
        | xsd:NMTOKEN "self"
      }?,
      (xsd:NCName | xsd:string "")
    }
RepeatCondition =
  notAllowed
  | element RepeatCondition { SourceLocators, BooleanExpression }
Node =
  notAllowed
  | element Node {
      SourceLocators,
      attribute epx { xsd:NCName }?,
      attribute NodeType {
        xsd:NMTOKEN "Empty"
        | xsd:NMTOKEN "Command"
        | xsd:NMTOKEN "LibraryNodeCall"
        | xsd:NMTOKEN "Update"
        | xsd:NMTOKEN "Assignment"
        | xsd:NMTOKEN "Request"
        | xsd:NMTOKEN "NodeList"
      },
      (element Comment { \string }?
       & NodeId
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?
       & NodeBody?)
    }
EQNumeric =
  notAllowed
  | element EQNumeric {
      SourceLocators, NumericExpression, NumericExpression
    }
IntegerVariable =
  notAllowed
  | element IntegerVariable { NCName }
DIV =
  notAllowed
  | element DIV { SourceLocators, NumericExpression, NumericExpression }
Timepoint =
  notAllowed
  | element Timepoint { xsd:NMTOKEN "START" | xsd:NMTOKEN "END" }
Alias =
  notAllowed
  | element Alias {
      SourceLocators,
      element NodeParameter { NCName },
      (Value | DeclaredVariable)
    }
NodeBody =
  notAllowed
  | element NodeBody {
      NodeList
      | Command
      | Assignment
      | Update
      | Request
      | LibraryNodeCall
    }
NEBoolean =
  notAllowed
  | element NEBoolean {
      SourceLocators, BooleanExpression, BooleanExpression
    }
Finished =
  notAllowed
  | element Finished { node-reference }
InvariantCondition =
  notAllowed
  | element InvariantCondition { SourceLocators, BooleanExpression }
NodeFailure = NodeFailureVariable | NodeFailureValue
MessageReceived =
  notAllowed
  | element MessageReceived { SourceLocators, StringExpression }
NodeOutcomeVariable =
  notAllowed
  | element NodeOutcomeVariable { node-reference }
EQString =
  notAllowed
  | element EQString {
      SourceLocators, StringExpression, StringExpression
    }
\string = xsd:string
NOT =
  notAllowed
  | element NOT { SourceLocators, BooleanExpression }
Action =
  Node
  | Sequence
  | Concurrence
  | UncheckedSequence
  | Try
  | If
  | While
  | For
  | OnCommand
  | OnMessage
  | Wait
  | SynchronousCommand
EQInternal =
  notAllowed
  | element EQInternal {
      SourceLocators,
      ((NodeState, NodeState)
       | (NodeOutcome, NodeOutcome)
       | (NodeFailure, NodeFailure)
       | (NodeCommandHandle, NodeCommandHandle))
    }
NumericExpression =
  ADD
  | SUB
  | MUL
  | DIV
  | MOD
  | SQRT
  | ABS
  | IntegerVariable
  | RealVariable
  | IntegerValue
  | RealValue
  | LookupGroup
  | NodeTimepointValue
  | (notAllowed
     | element ArraySize { NCName })
  | (notAllowed
     | element ArrayMaxSize { NCName })
  | ArrayElement
NCName = xsd:NCName
EQBoolean =
  notAllowed
  | element EQBoolean {
      SourceLocators, BooleanExpression, BooleanExpression
    }
NodeFailureVariable =
  notAllowed
  | element NodeFailureVariable { node-reference }
Failed =
  notAllowed
  | element Failed { node-reference }
ABS =
  notAllowed
  | element ABS { SourceLocators, NumericExpression }
ArrayRHS =
  notAllowed
  | element ArrayRHS {
      SourceLocators,
      element ArrayVariable { NCName }
    }
Sequence =
  notAllowed
  | element Sequence { SourceLocators, SequenceType }
NEInternal =
  notAllowed
  | element NEInternal {
      SourceLocators,
      ((NodeState, NodeState)
       | (NodeOutcome, NodeOutcome)
       | (NodeFailure, NodeFailure)
       | (NodeCommandHandle, NodeCommandHandle))
    }
LE =
  notAllowed
  | element LE { SourceLocators, NumericExpression, NumericExpression }
ArrayElement =
  notAllowed
  | element ArrayElement {
      SourceLocators,
      element Name { NCName },
      element Index { NumericExpression }
    }
ResourceList =
  notAllowed
  | element ResourceList { SourceLocators, Resource* }
PreCondition =
  notAllowed
  | element PreCondition { SourceLocators, BooleanExpression }
Resource =
  notAllowed
  | element Resource {
      SourceLocators,
      (element ResourceName { StringExpression }
       & element ResourcePriority { NumericExpression }
       & element ResourceLowerBound { NumericExpression }?
       & element ResourceUpperBound { NumericExpression }?
       & element ResourceReleaseAtTermination { BooleanExpression }?)
    }
InvariantFailed =
  notAllowed
  | element InvariantFailed { node-reference }
Executing =
  notAllowed
  | element Executing { node-reference }
Lookup =
  notAllowed
  | element Lookup { SourceLocators, Name, Tolerance?, Arguments? }
NodeCommandHandle = NodeCommandHandleVariable | NodeCommandHandleValue
LibraryNodeCall =
  notAllowed
  | element LibraryNodeCall {
      SourceLocators,
      NodeId,
      element RenameNodeId { NCName }?,
      Alias*
    }
DeclareArray =
  notAllowed
  | element DeclareArray {
      SourceLocators,
      element Name { NCName },
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger },
      element InitialValue {
        IntegerValue+ | RealValue+ | BooleanValue+ | StringValue+
      }?
    }
NodeClauses =
  NodeId
  | empty
  | (notAllowed
     | element Comment { \string })
  | StartCondition
  | RepeatCondition
  | PreCondition
  | PostCondition
  | InvariantCondition
  | EndCondition
  | SkipCondition
  | (notAllowed
     | element Priority { nonNegativeInteger })
  | (notAllowed
     | element Permissions { \string })
  | Interface
  | VariableDeclarations
OR =
  notAllowed
  | element OR { SourceLocators, BooleanExpression* }
SynchronousCommand =
  notAllowed
  | element SynchronousCommand {
      SourceLocators,
      NodeClauses+,
      element Timeout { NumericExpression }?,
      Tolerance?,
      Command
    }
NodeOutcomeValue =
  notAllowed
  | element NodeOutcomeValue {
      xsd:NMTOKEN "SUCCESS"
      | xsd:NMTOKEN "SKIPPED"
      | xsd:NMTOKEN "FAILURE"
    }
OnMessage =
  notAllowed
  | element OnMessage {
      SourceLocators,
      NodeClauses+,
      element Message { StringExpression },
      Action?
    }
IntegerValue =
  notAllowed
  | element IntegerValue { xsd:integer }
SUB =
  notAllowed
  | element SUB { SourceLocators, NumericExpression, NumericExpression }
Return =
  notAllowed
  | element Return {
      element Name { NCName }?,
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger }?
    }
Arguments =
  notAllowed
  | element Arguments {
      SourceLocators,
      (IntegerValue
       | RealValue
       | BooleanValue
       | ArrayValue
       | StringExpression
       | DeclaredVariable)+
    }
Waiting =
  notAllowed
  | element Waiting { node-reference }
For =
  notAllowed
  | element For {
      SourceLocators,
      NodeClauses+,
      element LoopVariable { DeclareVariable },
      element Condition { BooleanExpression },
      element LoopVariableUpdate { NumericExpression },
      element Action { Action }
    }
node-reference = NodeReference, empty
PostCondition =
  notAllowed
  | element PostCondition { SourceLocators, BooleanExpression }
StateDeclaration =
  notAllowed
  | element StateDeclaration {
      SourceLocators,
      element Name { NCName },
      Return,
      Parameter*
    }
NodeFailureValue =
  notAllowed
  | element NodeFailureValue {
      xsd:NMTOKEN "INVARIANT_CONDITION_FAILED"
      | xsd:NMTOKEN "PRE_CONDITION_FAILED"
      | xsd:NMTOKEN "POST_CONDITION_FAILED"
      | xsd:NMTOKEN "PARENT_FAILED"
    }
nonNegativeInteger = xsd:nonNegativeInteger
NodeOutcome = NodeOutcomeVariable | NodeOutcomeValue
Command =
  notAllowed
  | element Command {
      SourceLocators, ResourceList?, DeclaredVariable?, Name, Arguments?
    }
BooleanRHS =
  notAllowed
  | element BooleanRHS { SourceLocators, BooleanExpression }
LookupGroup = LookupOnChange | LookupNow | Lookup
RealVariable =
  notAllowed
  | element RealVariable { NCName }
LibraryNodeDeclaration =
  notAllowed
  | element LibraryNodeDeclaration {
      SourceLocators,
      element Name { NCName },
      element Interface {
        mixed {
          (attribute * { text }
           | element0)*
        }
      }
    }
Name =
  notAllowed
  | element Name { SourceLocators, StringExpression }
Wait =
  notAllowed
  | element Wait {
      SourceLocators,
      NodeClauses+,
      element Units { NumericExpression },
      Tolerance?
    }
NEString =
  notAllowed
  | element NEString {
      SourceLocators, StringExpression, StringExpression
    }
If =
  notAllowed
  | element If {
      SourceLocators,
      NodeClauses+,
      element Condition { BooleanExpression },
      element Then { Action },
      element Else { Action }?
    }
LookupNow =
  notAllowed
  | element LookupNow { SourceLocators, Name, Arguments? }
SequenceType = NodeClauses+, Action*
Concurrence =
  notAllowed
  | element Concurrence { SourceLocators, SequenceType }
In =
  notAllowed
  | element In { SourceLocators, (DeclareVariable | DeclareArray)+ }
StringValue =
  notAllowed
  | element StringValue { xsd:string }
Tolerance =
  notAllowed
  | element Tolerance { RealValue | RealVariable }
Try =
  notAllowed
  | element Try { SourceLocators, SequenceType }
IsKnown =
  notAllowed
  | element IsKnown {
      SourceLocators,
      (DeclaredVariable
       | LookupGroup
       | NodeStateVariable
       | NodeOutcomeVariable
       | NodeTimepointValue)
    }
OnCommand =
  notAllowed
  | element OnCommand { SourceLocators, NodeClauses+, Name, Action? }
BooleanExpression =
  OR
  | XOR
  | AND
  | NOT
  | IsKnown
  | GT
  | GE
  | LT
  | LE
  | EQBoolean
  | EQNumeric
  | EQInternal
  | EQString
  | NEBoolean
  | NENumeric
  | NEInternal
  | NEString
  | BooleanVariable
  | BooleanValue
  | LookupGroup
  | ArrayElement
  | Finished
  | IterationEnded
  | Executing
  | Waiting
  | Inactive
  | Succeeded
  | Failed
  | Skipped
  | InvariantFailed
  | PreconditionFailed
  | PostconditionFailed
  | ParentFailed
  | MessageReceived
CommandDeclaration =
  notAllowed
  | element CommandDeclaration {
      SourceLocators,
      element Name { NCName },
      Return*,
      Parameter*,
      ResourceList?
    }
VariableDeclarations =
  notAllowed
  | element VariableDeclarations { (DeclareVariable | DeclareArray)+ }
SQRT =
  notAllowed
  | element SQRT { SourceLocators, NumericExpression }
DeclaredVariable =
  IntegerVariable
  | RealVariable
  | BooleanVariable
  | StringVariable
  | (notAllowed
     | element ArrayVariable { NCName })
  | ArrayElement
StringVariable =
  notAllowed
  | element StringVariable { NCName }
LT =
  notAllowed
  | element LT { SourceLocators, NumericExpression, NumericExpression }
NodeCommandHandleVariable =
  notAllowed
  | element NodeCommandHandleVariable { SourceLocators, NodeId }
NodeTimepointValue =
  notAllowed
  | element NodeTimepointValue {
      SourceLocators, NodeReference, NodeStateValue, Timepoint
    }
Parameter =
  notAllowed
  | element Parameter {
      element Name { NCName }?,
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger }?
    }
MUL =
  notAllowed
  | element MUL {
      SourceLocators,
      NumericExpression,
      NumericExpression,
      NumericExpression*
    }
Request =
  notAllowed
  | element Request { SourceLocators, NodeId?, Pair* }
NumericRHS =
  notAllowed
  | element NumericRHS { SourceLocators, NumericExpression }
Update =
  notAllowed
  | element Update { SourceLocators, Pair* }
GlobalDeclarations =
  notAllowed
  | element GlobalDeclarations {
      SourceLocators,
      (CommandDeclaration
       | empty
       | StateDeclaration
       | LibraryNodeDeclaration
       | element TimeScalingUnitsSubunits { xsd:integer })+
    }
ArrayValue =
  notAllowed
  | element ArrayValue {
      SourceLocators,
      attribute Type {
        xsd:NMTOKEN "Real"
        | xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "Integer"
      },
      (IntegerValue+ | RealValue+ | BooleanValue+ | StringValue+)
    }
SkipCondition =
  notAllowed
  | element SkipCondition { SourceLocators, BooleanExpression }
Inactive =
  notAllowed
  | element Inactive { node-reference }
LookupOnChange =
  notAllowed
  | element LookupOnChange {
      SourceLocators, Name, Tolerance?, Arguments?
    }
InOut =
  notAllowed
  | element InOut { SourceLocators, (DeclareVariable | DeclareArray)+ }
StringExpression =
  StringVariable | StringValue | Concat | LookupGroup | ArrayElement
GE =
  notAllowed
  | element GE { SourceLocators, NumericExpression, NumericExpression }
StartCondition =
  notAllowed
  | element StartCondition { SourceLocators, BooleanExpression }
AND =
  notAllowed
  | element AND { SourceLocators, BooleanExpression* }
Value = IntegerValue | RealValue | BooleanValue | StringValue
NENumeric =
  notAllowed
  | element NENumeric {
      SourceLocators, NumericExpression, NumericExpression
    }
NodeState = NodeStateVariable | NodeStateValue
AtomicTypeValues =
  xsd:NMTOKEN "Real"
  | xsd:NMTOKEN "String"
  | xsd:NMTOKEN "Boolean"
  | xsd:NMTOKEN "Integer"
Pair =
  notAllowed
  | element Pair {
      element Name { NCName },
      (Value | DeclaredVariable | LookupNow)
    }
MOD =
  notAllowed
  | element MOD { SourceLocators, NumericExpression, NumericExpression }
BooleanValue =
  notAllowed
  | element BooleanValue { xsd:boolean }
NodeReference = NodeId | NodeRef
DeclareVariable =
  notAllowed
  | element DeclareVariable {
      SourceLocators,
      element Name { NCName },
      element Type { AtomicTypeValues },
      element InitialValue { Value }?
    }
RealValue =
  notAllowed
  | element RealValue { xsd:double }
While =
  notAllowed
  | element While {
      SourceLocators,
      NodeClauses+,
      element Condition { BooleanExpression },
      element Action { Action }
    }
NodeList =
  notAllowed
  | element NodeList { Action* }
IterationEnded =
  notAllowed
  | element IterationEnded { node-reference }
Interface =
  notAllowed
  | element Interface { In? & InOut? }
NodeCommandHandleValue =
  notAllowed
  | element NodeCommandHandleValue {
      xsd:NMTOKEN "COMMAND_ACCEPTED"
      | xsd:NMTOKEN "COMMAND_ABORTED"
      | xsd:NMTOKEN "COMMAND_FAILED"
      | xsd:NMTOKEN "COMMAND_SUCCESS"
      | xsd:NMTOKEN "COMMAND_SENT_TO_SYSTEM"
      | xsd:NMTOKEN "COMMAND_ABORT_FAILED"
      | xsd:NMTOKEN "COMMAND_DENIED"
      | xsd:NMTOKEN "COMMAND_RCVD_BY_SYSTEM"
    }
NodeStateValue =
  notAllowed
  | element NodeStateValue {
      xsd:NMTOKEN "ITERATION_ENDED"
      | xsd:NMTOKEN "EXECUTING"
      | xsd:NMTOKEN "WAITING"
      | xsd:NMTOKEN "FINISHING"
      | xsd:NMTOKEN "INACTIVE"
      | xsd:NMTOKEN "FAILING"
      | xsd:NMTOKEN "FINISHED"
    }
SourceLocators =
  attribute ColNo { xsd:integer }?,
  attribute LineNo { xsd:integer }?,
  attribute FileName { xsd:string }?
Succeeded =
  notAllowed
  | element Succeeded { node-reference }
ParentFailed =
  notAllowed
  | element ParentFailed { node-reference }
EndCondition =
  notAllowed
  | element EndCondition { SourceLocators, BooleanExpression }
GT =
  notAllowed
  | element GT { SourceLocators, NumericExpression, NumericExpression }
Assignment =
  notAllowed
  | element Assignment {
      SourceLocators,
      DeclaredVariable,
      (BooleanRHS | NumericRHS | StringRHS | LookupRHS | ArrayRHS)
    }
PreconditionFailed =
  notAllowed
  | element PreconditionFailed { node-reference }
element0 =
  element * {
    mixed {
      (attribute * { text }
       | element0)*
    }
  }
NodeId =
  notAllowed
  | element NodeId { NCName }
UncheckedSequence =
  notAllowed
  | element UncheckedSequence { SourceLocators, SequenceType }
Concat =
  notAllowed
  | element Concat { SourceLocators, StringExpression* }
ADD =
  notAllowed
  | element ADD {
      SourceLocators,
      NumericExpression,
      NumericExpression,
      NumericExpression*
    }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

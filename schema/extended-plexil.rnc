namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  NodeTimepointValue
  | LookupNow
  | NodeRef
  | Tolerance
  | LT
  | PreconditionFailed
  | IterationEnded
  | MOD
  | BooleanVariable
  | DeclareArray
  | IntegerVariable
  | StateDeclaration
  | SkipCondition
  | BooleanValue
  | ResourceList
  | NOT
  | Finished
  | IterationFailed
  | Waiting
  | RealVariable
  | InOut
  | MessageReceived
  | ArrayVariable
  | Node
  | Timepoint
  | Failed
  | NodeList
  | LookupRHS
  | GE
  | NodeStateVariable
  | Pair
  | RepeatCondition
  | PostCondition
  | NodeId
  | VariableDeclarations
  | NEInternal
  | StringVariable
  | LibraryNodeDeclaration
  | UncheckedSequence
  | NodeCommandHandleValue
  | MUL
  | InvariantCondition
  | IsKnown
  | ABS
  | SynchronousCommand
  | StartCondition
  | Executing
  | GlobalDeclarations
  | OnMessage
  | StringValue
  | OR
  | EndCondition
  | EQString
  | (notAllowed
     | element ArrayValue {
         SourceLocators,
         attribute Type {
           xsd:NMTOKEN "Real"
           | xsd:NMTOKEN "Date"
           | xsd:NMTOKEN "String"
           | xsd:NMTOKEN "Duration"
           | xsd:NMTOKEN "Boolean"
           | xsd:NMTOKEN "Integer"
         },
         (IntegerValue+ | RealValue+ | BooleanValue+ | StringValue+)
       })
  | GT
  | DurationVariable
  | Wait
  | NodeFailureValue
  | DeclareVariable
  | Try
  | ArrayElement
  | Inactive
  | StringRHS
  | BooleanRHS
  | NumericRHS
  | MAX
  | DurationValue
  | CommandDeclaration
  | SUB
  | While
  | AND
  | EQInternal
  | NodeFailureVariable
  | DateVariable
  | Sequence
  | ParentFailed
  | PreCondition
  | Arguments
  | RealValue
  | Interface
  | LibraryNodeCall
  | NodeCommandHandleVariable
  | Concurrence
  | LookupOnChange
  | Return
  | If
  | NEString
  | ADD
  | Command
  | NodeBody
  | Succeeded
  | In
  | XOR
  | NENumeric
  | Update
  | Assignment
  | NodeStateValue
  | Concat
  | InvariantFailed
  | PostconditionFailed
  | MIN
  | SQRT
  | For
  | EQNumeric
  | Parameter
  | DateValue
  | NodeOutcomeVariable
  | IntegerValue
  | Resource
  | NodeOutcomeValue
  | (notAllowed
     | element PlexilPlan {
         SourceLocators, GlobalDeclarations?, Action
       })
  | IterationSucceeded
  | EQBoolean
  | Name
  | NEBoolean
  | Alias
  | ArrayRHS
  | DIV
  | Lookup
  | OnCommand
  | LE
  | Skipped
Value =
  IntegerValue
  | RealValue
  | BooleanValue
  | StringValue
  | DateValue
  | DurationValue
NENumeric =
  notAllowed
  | element NENumeric {
      SourceLocators, NumericExpression, NumericExpression
    }
node-reference = (SourceLocators, NodeReference), empty
Alias =
  notAllowed
  | element Alias {
      SourceLocators,
      element NodeParameter { NCName },
      (Value
       | DeclaredVariable
       | LookupGroup
       | OR
       | XOR
       | AND
       | NOT
       | EQBoolean
       | EQNumeric
       | EQInternal
       | EQString
       | NEBoolean
       | NENumeric
       | NEInternal
       | NEString
       | GT
       | GE
       | LT
       | LE
       | IsKnown
       | ArithmeticOperator
       | NodeTimepointValue
       | element ArraySize { NCName }
       | element ArrayMaxSize { NCName }
       | StringOperator)
    }
OR =
  notAllowed
  | element OR { SourceLocators, BooleanExpression* }
Sequence =
  notAllowed
  | element Sequence { SourceLocators, SequenceType }
ParentFailed =
  notAllowed
  | element ParentFailed { node-reference }
GlobalDeclarations =
  notAllowed
  | element GlobalDeclarations {
      SourceLocators,
      (CommandDeclaration
       | empty
       | StateDeclaration
       | LibraryNodeDeclaration
       | element TimeScalingUnitsSubunits { xsd:integer })+
    }
PreCondition =
  notAllowed
  | element PreCondition { SourceLocators, BooleanExpression }
ArrayVariable =
  notAllowed
  | element ArrayVariable { NCName }
SourceLocators =
  attribute ColNo { xsd:integer }?,
  attribute LineNo { xsd:integer }?,
  attribute FileName { xsd:string }?
NodeOutcomeVariable =
  notAllowed
  | element NodeOutcomeVariable { node-reference }
StartCondition =
  notAllowed
  | element StartCondition { SourceLocators, BooleanExpression }
NodeCommandHandle = NodeCommandHandleVariable | NodeCommandHandleValue
NodeId =
  notAllowed
  | element NodeId { NCName }
IterationSucceeded =
  notAllowed
  | element IterationSucceeded { node-reference }
NodeReference = NodeId | NodeRef
NodeCommandHandleVariable =
  notAllowed
  | element NodeCommandHandleVariable { SourceLocators, NodeId }
StateDeclaration =
  notAllowed
  | element StateDeclaration {
      SourceLocators,
      element Name { NCName },
      Return,
      Parameter*
    }
NodeClauses =
  NodeId
  | empty
  | (notAllowed
     | element Comment { \string })
  | StartCondition
  | RepeatCondition
  | PreCondition
  | PostCondition
  | InvariantCondition
  | EndCondition
  | SkipCondition
  | (notAllowed
     | element Priority { nonNegativeInteger })
  | Interface
  | VariableDeclarations
BooleanRHS =
  notAllowed
  | element BooleanRHS { SourceLocators, BooleanExpression }
NEString =
  notAllowed
  | element NEString {
      SourceLocators, StringExpression, StringExpression
    }
StringExpression =
  StringVariable
  | StringValue
  | DateVariable
  | DateValue
  | DurationVariable
  | DurationValue
  | StringOperator
  | LookupGroup
  | ArrayElement
Return =
  notAllowed
  | element Return {
      element Name { NCName }?,
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger }?
    }
ArrayElement =
  notAllowed
  | element ArrayElement {
      SourceLocators,
      element Name { NCName },
      element Index { NumericExpression }
    }
NodeStateVariable =
  notAllowed
  | element NodeStateVariable { node-reference }
EQNumeric =
  notAllowed
  | element EQNumeric {
      SourceLocators, NumericExpression, NumericExpression
    }
EQInternal =
  notAllowed
  | element EQInternal {
      SourceLocators,
      ((NodeState, NodeState)
       | (NodeOutcome, NodeOutcome)
       | (NodeFailure, NodeFailure)
       | (NodeCommandHandle, NodeCommandHandle))
    }
PostconditionFailed =
  notAllowed
  | element PostconditionFailed { node-reference }
StringOperator = Concat
For =
  notAllowed
  | element For {
      SourceLocators,
      NodeClauses+,
      element LoopVariable { DeclareVariable },
      element Condition { BooleanExpression },
      element LoopVariableUpdate { NumericExpression },
      element Action { Action }
    }
Succeeded =
  notAllowed
  | element Succeeded { node-reference }
SequenceType = NodeClauses+, Action*
Resource =
  notAllowed
  | element Resource {
      SourceLocators,
      (element ResourceName { StringExpression }
       & element ResourcePriority { NumericExpression }
       & element ResourceLowerBound { NumericExpression }?
       & element ResourceUpperBound { NumericExpression }?
       & element ResourceReleaseAtTermination { BooleanExpression }?)
    }
InvariantCondition =
  notAllowed
  | element InvariantCondition { SourceLocators, BooleanExpression }
BooleanValue =
  notAllowed
  | element BooleanValue { xsd:boolean }
Lookup =
  notAllowed
  | element Lookup { SourceLocators, Name, Tolerance?, Arguments? }
CommandDeclaration =
  notAllowed
  | element CommandDeclaration {
      SourceLocators,
      element Name { NCName },
      Return*,
      Parameter*,
      ResourceList?
    }
NOT =
  notAllowed
  | element NOT { SourceLocators, BooleanExpression }
NodeFailure = NodeFailureVariable | NodeFailureValue
LookupGroup = LookupOnChange | LookupNow | Lookup
Update =
  notAllowed
  | element Update { SourceLocators, Pair* }
MessageReceived =
  notAllowed
  | element MessageReceived { SourceLocators, StringExpression }
IterationFailed =
  notAllowed
  | element IterationFailed { node-reference }
NodeFailureValue =
  notAllowed
  | element NodeFailureValue {
      xsd:NMTOKEN "INVARIANT_CONDITION_FAILED"
      | xsd:NMTOKEN "PRE_CONDITION_FAILED"
      | xsd:NMTOKEN "POST_CONDITION_FAILED"
      | xsd:NMTOKEN "PARENT_FAILED"
    }
Tolerance =
  notAllowed
  | element Tolerance {
      IntegerValue
      | IntegerVariable
      | RealValue
      | RealVariable
      | DurationValue
      | DurationVariable
    }
Waiting =
  notAllowed
  | element Waiting { node-reference }
Inactive =
  notAllowed
  | element Inactive { node-reference }
Name =
  notAllowed
  | element Name { SourceLocators, StringExpression }
NCName = xsd:NCName
Concat =
  notAllowed
  | element Concat { SourceLocators, StringExpression* }
DateValue =
  notAllowed
  | element DateValue { xsd:string }
LookupOnChange =
  notAllowed
  | element LookupOnChange {
      SourceLocators, Name, Tolerance?, Arguments?
    }
BooleanVariable =
  notAllowed
  | element BooleanVariable { NCName }
Try =
  notAllowed
  | element Try { SourceLocators, SequenceType }
MIN =
  notAllowed
  | element MIN { SourceLocators, NumericExpression, NumericExpression }
IsKnown =
  notAllowed
  | element IsKnown {
      SourceLocators,
      (DeclaredVariable
       | LookupGroup
       | NodeStateVariable
       | NodeOutcomeVariable
       | NodeTimepointValue)
    }
Pair =
  notAllowed
  | element Pair {
      element Name { NCName },
      (Value | DeclaredVariable | LookupNow)
    }
DurationValue =
  notAllowed
  | element DurationValue { xsd:string }
NEBoolean =
  notAllowed
  | element NEBoolean {
      SourceLocators, BooleanExpression, BooleanExpression
    }
DateVariable =
  notAllowed
  | element DateVariable { NCName }
NodeTimepointValue =
  notAllowed
  | element NodeTimepointValue {
      SourceLocators, NodeReference, NodeStateValue, Timepoint
    }
StringVariable =
  notAllowed
  | element StringVariable { NCName }
LibraryNodeCall =
  notAllowed
  | element LibraryNodeCall {
      SourceLocators,
      NodeId,
      element RenameNodeId { NCName }?,
      Alias*
    }
Skipped =
  notAllowed
  | element Skipped { node-reference }
SkipCondition =
  notAllowed
  | element SkipCondition { SourceLocators, BooleanExpression }
Assignment =
  notAllowed
  | element Assignment {
      SourceLocators,
      DeclaredVariable,
      (BooleanRHS | NumericRHS | StringRHS | LookupRHS | ArrayRHS)
    }
Action =
  Node
  | Sequence
  | Concurrence
  | UncheckedSequence
  | Try
  | If
  | While
  | For
  | OnCommand
  | OnMessage
  | Wait
  | SynchronousCommand
NumericRHS =
  notAllowed
  | element NumericRHS { SourceLocators, NumericExpression }
ADD =
  notAllowed
  | element ADD {
      SourceLocators,
      NumericExpression,
      NumericExpression,
      NumericExpression*
    }
BooleanExpression =
  OR
  | XOR
  | AND
  | NOT
  | IsKnown
  | GT
  | GE
  | LT
  | LE
  | EQBoolean
  | EQNumeric
  | EQInternal
  | EQString
  | NEBoolean
  | NENumeric
  | NEInternal
  | NEString
  | BooleanVariable
  | BooleanValue
  | LookupGroup
  | ArrayElement
  | Finished
  | IterationEnded
  | Executing
  | Waiting
  | Inactive
  | Succeeded
  | IterationSucceeded
  | Failed
  | IterationFailed
  | Skipped
  | InvariantFailed
  | PreconditionFailed
  | PostconditionFailed
  | ParentFailed
  | MessageReceived
Node =
  notAllowed
  | element Node {
      SourceLocators,
      attribute epx { xsd:NCName }?,
      attribute NodeType {
        xsd:NMTOKEN "Empty"
        | xsd:NMTOKEN "Command"
        | xsd:NMTOKEN "LibraryNodeCall"
        | xsd:NMTOKEN "Update"
        | xsd:NMTOKEN "Assignment"
        | xsd:NMTOKEN "NodeList"
      },
      (element Comment { \string }?
       & NodeId
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & Interface?
       & VariableDeclarations?
       & NodeBody?)
    }
LookupNow =
  notAllowed
  | element LookupNow { SourceLocators, Name, Arguments? }
While =
  notAllowed
  | element While {
      SourceLocators,
      NodeClauses+,
      element Condition { BooleanExpression },
      element Action { Action }
    }
AND =
  notAllowed
  | element AND { SourceLocators, BooleanExpression* }
NodeStateValue =
  notAllowed
  | element NodeStateValue {
      xsd:NMTOKEN "ITERATION_ENDED"
      | xsd:NMTOKEN "EXECUTING"
      | xsd:NMTOKEN "WAITING"
      | xsd:NMTOKEN "FINISHING"
      | xsd:NMTOKEN "INACTIVE"
      | xsd:NMTOKEN "FAILING"
      | xsd:NMTOKEN "FINISHED"
    }
AtomicTypeValues =
  xsd:NMTOKEN "Real"
  | xsd:NMTOKEN "Date"
  | xsd:NMTOKEN "String"
  | xsd:NMTOKEN "Duration"
  | xsd:NMTOKEN "Boolean"
  | xsd:NMTOKEN "Integer"
DurationVariable =
  notAllowed
  | element DurationVariable { NCName }
SynchronousCommand =
  notAllowed
  | element SynchronousCommand {
      SourceLocators,
      NodeClauses+,
      element Timeout { NumericExpression }?,
      Tolerance?,
      Command
    }
ResourceList =
  notAllowed
  | element ResourceList { SourceLocators, Resource* }
OnCommand =
  notAllowed
  | element OnCommand { SourceLocators, NodeClauses+, Name, Action? }
NumericExpression =
  ArithmeticOperator
  | IntegerVariable
  | RealVariable
  | IntegerValue
  | RealValue
  | DateVariable
  | DateValue
  | DurationVariable
  | DurationValue
  | LookupGroup
  | NodeTimepointValue
  | (notAllowed
     | element ArraySize { NCName })
  | (notAllowed
     | element ArrayMaxSize { NCName })
  | ArrayElement
Wait =
  notAllowed
  | element Wait {
      SourceLocators,
      NodeClauses+,
      element Units { NumericExpression },
      Tolerance?
    }
NodeFailureVariable =
  notAllowed
  | element NodeFailureVariable { node-reference }
NodeOutcomeValue =
  notAllowed
  | element NodeOutcomeValue {
      xsd:NMTOKEN "SUCCESS"
      | xsd:NMTOKEN "SKIPPED"
      | xsd:NMTOKEN "FAILURE"
    }
EQString =
  notAllowed
  | element EQString {
      SourceLocators, StringExpression, StringExpression
    }
GT =
  notAllowed
  | element GT { SourceLocators, NumericExpression, NumericExpression }
Interface =
  notAllowed
  | element Interface { SourceLocators, (In? & InOut?) }
DeclareArray =
  notAllowed
  | element DeclareArray {
      SourceLocators,
      element Name { NCName },
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger },
      element InitialValue { Value+ }?
    }
RealValue =
  notAllowed
  | element RealValue { xsd:double }
IntegerVariable =
  notAllowed
  | element IntegerVariable { NCName }
ABS =
  notAllowed
  | element ABS { SourceLocators, NumericExpression }
DIV =
  notAllowed
  | element DIV { SourceLocators, NumericExpression, NumericExpression }
SQRT =
  notAllowed
  | element SQRT { SourceLocators, NumericExpression }
DeclaredVariable =
  IntegerVariable
  | RealVariable
  | BooleanVariable
  | StringVariable
  | DateVariable
  | DurationVariable
  | ArrayVariable
  | ArrayElement
ArrayRHS =
  notAllowed
  | element ArrayRHS { SourceLocators, ArrayVariable }
IterationEnded =
  notAllowed
  | element IterationEnded { node-reference }
LE =
  notAllowed
  | element LE { SourceLocators, NumericExpression, NumericExpression }
LibraryNodeDeclaration =
  notAllowed
  | element LibraryNodeDeclaration {
      SourceLocators,
      element Name { NCName },
      Interface
    }
UncheckedSequence =
  notAllowed
  | element UncheckedSequence { SourceLocators, SequenceType }
EQBoolean =
  notAllowed
  | element EQBoolean {
      SourceLocators, BooleanExpression, BooleanExpression
    }
StringRHS =
  notAllowed
  | element StringRHS { SourceLocators, StringExpression }
NodeOutcome = NodeOutcomeVariable | NodeOutcomeValue
MAX =
  notAllowed
  | element MAX { SourceLocators, NumericExpression, NumericExpression }
MUL =
  notAllowed
  | element MUL {
      SourceLocators,
      NumericExpression,
      NumericExpression,
      NumericExpression*
    }
DeclareVariable =
  notAllowed
  | element DeclareVariable {
      SourceLocators,
      element Name { NCName },
      element Type { AtomicTypeValues },
      element InitialValue { Value }?
    }
InOut =
  notAllowed
  | element InOut { SourceLocators, (DeclareVariable | DeclareArray)+ }
In =
  notAllowed
  | element In { SourceLocators, (DeclareVariable | DeclareArray)+ }
Command =
  notAllowed
  | element Command {
      SourceLocators, ResourceList?, DeclaredVariable?, Name, Arguments?
    }
InvariantFailed =
  notAllowed
  | element InvariantFailed { node-reference }
RealVariable =
  notAllowed
  | element RealVariable { NCName }
Arguments =
  notAllowed
  | element Arguments {
      SourceLocators,
      (BooleanExpression
       | NumericExpression
       | StringExpression
       | ArrayVariable)+
    }
If =
  notAllowed
  | element If {
      SourceLocators,
      NodeClauses+,
      element Condition { BooleanExpression },
      element Then { Action },
      element Else { Action }?
    }
Concurrence =
  notAllowed
  | element Concurrence { SourceLocators, SequenceType }
LookupRHS =
  notAllowed
  | element LookupRHS { SourceLocators, LookupGroup }
\string = xsd:string
SUB =
  notAllowed
  | element SUB { SourceLocators, NumericExpression, NumericExpression }
LT =
  notAllowed
  | element LT { SourceLocators, NumericExpression, NumericExpression }
NodeState = NodeStateVariable | NodeStateValue
NodeBody =
  notAllowed
  | element NodeBody {
      NodeList | Command | Assignment | Update | LibraryNodeCall
    }
StringValue =
  notAllowed
  | element StringValue { xsd:string }
NEInternal =
  notAllowed
  | element NEInternal {
      SourceLocators,
      ((NodeState, NodeState)
       | (NodeOutcome, NodeOutcome)
       | (NodeFailure, NodeFailure)
       | (NodeCommandHandle, NodeCommandHandle))
    }
NodeRef =
  notAllowed
  | element NodeRef {
      attribute dir {
        xsd:NMTOKEN "child"
        | xsd:NMTOKEN "sibling"
        | xsd:NMTOKEN "parent"
        | xsd:NMTOKEN "self"
      }?,
      (xsd:NCName | xsd:string "")
    }
NodeCommandHandleValue =
  notAllowed
  | element NodeCommandHandleValue {
      xsd:NMTOKEN "COMMAND_ACCEPTED"
      | xsd:NMTOKEN "COMMAND_ABORTED"
      | xsd:NMTOKEN "COMMAND_FAILED"
      | xsd:NMTOKEN "COMMAND_SUCCESS"
      | xsd:NMTOKEN "COMMAND_SENT_TO_SYSTEM"
      | xsd:NMTOKEN "COMMAND_ABORT_FAILED"
      | xsd:NMTOKEN "COMMAND_DENIED"
      | xsd:NMTOKEN "COMMAND_RCVD_BY_SYSTEM"
    }
ArithmeticOperator =
  ADD | SUB | MUL | DIV | MOD | MAX | MIN | SQRT | ABS
Parameter =
  notAllowed
  | element Parameter {
      element Name { NCName }?,
      element Type { AtomicTypeValues },
      element MaxSize { nonNegativeInteger }?
    }
Failed =
  notAllowed
  | element Failed { node-reference }
MOD =
  notAllowed
  | element MOD { SourceLocators, NumericExpression, NumericExpression }
Executing =
  notAllowed
  | element Executing { node-reference }
nonNegativeInteger = xsd:nonNegativeInteger
Timepoint =
  notAllowed
  | element Timepoint { xsd:NMTOKEN "START" | xsd:NMTOKEN "END" }
RepeatCondition =
  notAllowed
  | element RepeatCondition { SourceLocators, BooleanExpression }
PreconditionFailed =
  notAllowed
  | element PreconditionFailed { node-reference }
GE =
  notAllowed
  | element GE { SourceLocators, NumericExpression, NumericExpression }
NodeList =
  notAllowed
  | element NodeList { Action* }
Finished =
  notAllowed
  | element Finished { node-reference }
IntegerValue =
  notAllowed
  | element IntegerValue { xsd:integer }
XOR =
  notAllowed
  | element XOR { SourceLocators, BooleanExpression* }
PostCondition =
  notAllowed
  | element PostCondition { SourceLocators, BooleanExpression }
VariableDeclarations =
  notAllowed
  | element VariableDeclarations { (DeclareVariable | DeclareArray)+ }
EndCondition =
  notAllowed
  | element EndCondition { SourceLocators, BooleanExpression }
OnMessage =
  notAllowed
  | element OnMessage {
      SourceLocators,
      NodeClauses+,
      element Message { StringExpression },
      Action?
    }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

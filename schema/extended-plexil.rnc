namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  NodeBody
  | InvariantFailed
  | Succeeded
  | BooleanVariable
  | Waiting
  | Executing
  | OnCommand
  | NodeCommandHandleVariable
  | Concat
  | EQNumeric
  | StringValue
  | NodeFailureVariable
  | PreCondition
  | AND
  | NumericRHS
  | ArrayElement
  | DeclareArray
  | RepeatCondition
  | LE
  | NEInternal
  | SkipCondition
  | NodeTimepointValue
  | Command
  | (notAllowed
     | element IterationSucceeded { node-reference })
  | LibraryNodeCall
  | EndCondition
  | StringRHS
  | Request
  | Timepoint
  | NEBoolean
  | MessageReceived
  | LookupNow
  | IterationEnded
  | NodeFailureValue
  | ArrayRHS
  | LT
  | (notAllowed
     | element IterationFailed { node-reference })
  | OnMessage
  | In
  | Name
  | Pair
  | GE
  | MUL
  | RealValue
  | NEString
  | XOR
  | DIV
  | (notAllowed
     | element PlexilPlan {
         ColNo?, LineNo?, FileName?, GlobalDeclarations?, Action
       })
  | IsKnown
  | ADD
  | DeclareVariable
  | Parameter
  | Finished
  | Concurrence
  | For
  | NodeCommandHandleValue
  | NodeOutcomeValue
  | StartCondition
  | InOut
  | If
  | InvariantCondition
  | EQInternal
  | StringVariable
  | GlobalDeclarations
  | Sequence
  | Node
  | ParentFailed
  | Update
  | RealVariable
  | Interface
  | OR
  | IntegerValue
  | VariableDeclarations
  | BooleanRHS
  | UncheckedSequence
  | Failed
  | PostconditionFailed
  | Assignment
  | Arguments
  | Try
  | PostCondition
  | NodeRef
  | Alias
  | NENumeric
  | CommandDeclaration
  | Skipped
  | LookupRHS
  | ResourceList
  | LookupOnChange
  | PreconditionFailed
  | StateDeclaration
  | LibraryNodeDeclaration
  | GT
  | SQRT
  | NodeOutcomeVariable
  | IntegerVariable
  | ABS
  | EQBoolean
  | Tolerance
  | While
  | NodeStateVariable
  | EQString
  | Resource
  | NodeList
  | SUB
  | NOT
  | NodeStateValue
  | BooleanValue
  | Return
  | NodeId
  | Inactive
EQString =
  notAllowed
  | element EQString { StringExpression, StringExpression }
Concat =
  notAllowed
  | element Concat { StringExpression* }
LE =
  notAllowed
  | element LE { NumericExpression, NumericExpression }
Try =
  notAllowed
  | element Try { SequenceType, ColNo?, LineNo?, FileName? }
NodeFailure = NodeFailureVariable | NodeFailureValue
SequenceType =
  (NodeId?
   & (notAllowed
      | element Comment { \string })?
   & StartCondition?
   & RepeatCondition?
   & PreCondition?
   & PostCondition?
   & InvariantCondition?
   & EndCondition?
   & SkipCondition?
   & (notAllowed
      | element Priority { nonNegativeInteger })?
   & (notAllowed
      | element Permissions { \string })?
   & Interface?
   & VariableDeclarations?),
  Action*
NodeOutcome = NodeOutcomeVariable | NodeOutcomeValue
CommandDeclaration =
  notAllowed
  | element CommandDeclaration {
      element Name { NCName },
      Return*,
      Parameter*,
      ResourceList?
    }
ADD =
  notAllowed
  | element ADD {
      NumericExpression, NumericExpression, NumericExpression*
    }
NEBoolean =
  notAllowed
  | element NEBoolean { BooleanExpression, BooleanExpression }
DIV =
  notAllowed
  | element DIV { NumericExpression, NumericExpression }
Succeeded =
  notAllowed
  | element Succeeded { node-reference }
LibraryNodeCall =
  notAllowed
  | element LibraryNodeCall {
      NodeId,
      element RenameNodeId { NCName }?,
      Alias*
    }
EQBoolean =
  notAllowed
  | element EQBoolean { BooleanExpression, BooleanExpression }
StringRHS =
  notAllowed
  | element StringRHS { StringExpression }
Action =
  Node
  | Sequence
  | Concurrence
  | UncheckedSequence
  | Try
  | If
  | While
  | For
  | OnCommand
  | OnMessage
Waiting =
  notAllowed
  | element Waiting { node-reference }
Finished =
  notAllowed
  | element Finished { node-reference }
PreCondition =
  notAllowed
  | element PreCondition { BooleanExpression }
SkipCondition =
  notAllowed
  | element SkipCondition { BooleanExpression }
Arguments =
  notAllowed
  | element Arguments {
      (IntegerValue
       | RealValue
       | BooleanValue
       | StringExpression
       | DeclaredVariable)+
    }
Resource =
  notAllowed
  | element Resource {
      element ResourceName { StringExpression }
      & element ResourcePriority { NumericExpression }
      & element ResourceLowerBound { NumericExpression }?
      & element ResourceUpperBound { NumericExpression }?
      & element ResourceReleaseAtTermination { BooleanExpression }?
    }
NodeCommandHandleVariable =
  notAllowed
  | element NodeCommandHandleVariable { NodeId }
Node =
  notAllowed
  | element Node {
      ColNo?,
      LineNo?,
      FileName?,
      attribute epx {
        xsd:NMTOKEN "UncheckedSequence"
        | xsd:NMTOKEN "Then"
        | xsd:NMTOKEN "Else"
        | xsd:NMTOKEN "Sequence"
        | xsd:NMTOKEN "If"
        | xsd:NMTOKEN "While"
        | xsd:NMTOKEN "For"
        | xsd:NMTOKEN "Concurrence"
        | xsd:NMTOKEN "aux"
        | xsd:NMTOKEN "Try"
      }?,
      attribute NodeType {
        xsd:NMTOKEN "Assignment"
        | xsd:NMTOKEN "Command"
        | xsd:NMTOKEN "Update"
        | xsd:NMTOKEN "NodeList"
        | xsd:NMTOKEN "LibraryNodeCall"
        | xsd:NMTOKEN "Empty"
        | xsd:NMTOKEN "Request"
      },
      (element Comment { \string }?
       & NodeId
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?
       & NodeBody?)
    }
Value = IntegerValue | RealValue | BooleanValue | StringValue
node-reference = NodeReference, empty
PostCondition =
  notAllowed
  | element PostCondition { BooleanExpression }
In =
  notAllowed
  | element In { DeclareVariable+ }
SUB =
  notAllowed
  | element SUB { NumericExpression, NumericExpression }
EndCondition =
  notAllowed
  | element EndCondition { BooleanExpression }
StringVariable =
  notAllowed
  | element StringVariable { NCName }
LineNo = attribute LineNo { xsd:integer }
Parameter =
  notAllowed
  | element Parameter {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
EQNumeric =
  notAllowed
  | element EQNumeric { NumericExpression, NumericExpression }
OR =
  notAllowed
  | element OR { BooleanExpression* }
NodeList =
  notAllowed
  | element NodeList { Action* }
IsKnown =
  notAllowed
  | element IsKnown {
      DeclaredVariable
      | Lookup
      | NodeStateVariable
      | NodeOutcomeVariable
      | NodeTimepointValue
    }
Concurrence =
  notAllowed
  | element Concurrence { SequenceType, ColNo?, LineNo?, FileName? }
RepeatCondition =
  notAllowed
  | element RepeatCondition { BooleanExpression }
NodeOutcomeValue =
  notAllowed
  | element NodeOutcomeValue {
      xsd:NMTOKEN "SKIPPED"
      | xsd:NMTOKEN "SUCCESS"
      | xsd:NMTOKEN "FAILURE"
    }
IntegerValue =
  notAllowed
  | element IntegerValue { xsd:integer }
NodeStateVariable =
  notAllowed
  | element NodeStateVariable { node-reference }
NodeStateValue =
  notAllowed
  | element NodeStateValue {
      xsd:NMTOKEN "INACTIVE"
      | xsd:NMTOKEN "WAITING"
      | xsd:NMTOKEN "FINISHED"
      | xsd:NMTOKEN "ITERATION_ENDED"
      | xsd:NMTOKEN "EXECUTING"
      | xsd:NMTOKEN "FAILING"
      | xsd:NMTOKEN "FINISHING"
    }
Alias =
  notAllowed
  | element Alias {
      element NodeParameter { NCName },
      (Value | DeclaredVariable)
    }
nonNegativeInteger = xsd:nonNegativeInteger
NodeId =
  notAllowed
  | element NodeId { NCName }
LookupNow =
  notAllowed
  | element LookupNow {
      (Name
       | element StateName { \string }),
      Arguments?
    }
StringExpression =
  StringVariable | StringValue | Concat | Lookup | ArrayElement
Tolerance =
  notAllowed
  | element Tolerance { RealValue | RealVariable }
NodeTimepointValue =
  notAllowed
  | element NodeTimepointValue {
      NodeReference, NodeStateValue, Timepoint
    }
ParentFailed =
  notAllowed
  | element ParentFailed { node-reference }
MUL =
  notAllowed
  | element MUL {
      NumericExpression, NumericExpression, NumericExpression*
    }
NodeRef =
  notAllowed
  | element NodeRef {
      attribute dir {
        xsd:NMTOKEN "child"
        | xsd:NMTOKEN "self"
        | xsd:NMTOKEN "sibling"
        | xsd:NMTOKEN "parent"
      }?,
      NCNameOrEmpty
    }
NodeFailureValue =
  notAllowed
  | element NodeFailureValue {
      xsd:NMTOKEN "INVARIANT_CONDITION_FAILED"
      | xsd:NMTOKEN "POST_CONDITION_FAILED"
      | xsd:NMTOKEN "PRE_CONDITION_FAILED"
      | xsd:NMTOKEN "PARENT_FAILED"
    }
If =
  notAllowed
  | element If {
      (NodeId?
       & element Comment { \string }?
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?),
      element Condition { BooleanExpression },
      element Then { Action },
      element Else { Action }?,
      ColNo?,
      LineNo?,
      FileName?
    }
Executing =
  notAllowed
  | element Executing { node-reference }
Pair =
  notAllowed
  | element Pair {
      element Name { NCName },
      (Value | DeclaredVariable | LookupNow)
    }
NEString =
  notAllowed
  | element NEString { StringExpression, StringExpression }
ResourceList =
  notAllowed
  | element ResourceList { Resource* }
BooleanVariable =
  notAllowed
  | element BooleanVariable { NCName }
BooleanRHS =
  notAllowed
  | element BooleanRHS { BooleanExpression }
NCNameOrEmpty = xsd:NCName | xsd:string ""
Assignment =
  notAllowed
  | element Assignment {
      DeclaredVariable,
      (BooleanRHS | NumericRHS | StringRHS | LookupRHS | ArrayRHS)
    }
NEInternal =
  notAllowed
  | element NEInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
TypeValues =
  xsd:NMTOKEN "String"
  | xsd:NMTOKEN "Integer"
  | xsd:NMTOKEN "Array"
  | xsd:NMTOKEN "Boolean"
  | xsd:NMTOKEN "Real"
StateDeclaration =
  notAllowed
  | element StateDeclaration {
      element Name { NCName },
      Return,
      Parameter*
    }
StartCondition =
  notAllowed
  | element StartCondition { BooleanExpression }
VariableDeclarations =
  notAllowed
  | element VariableDeclarations { (DeclareVariable | DeclareArray)+ }
ABS =
  notAllowed
  | element ABS { NumericExpression }
XOR =
  notAllowed
  | element XOR { BooleanExpression* }
SQRT =
  notAllowed
  | element SQRT { NumericExpression }
OnCommand =
  notAllowed
  | element OnCommand {
      (Name & NodeId? & VariableDeclarations? & Action*),
      ColNo?,
      LineNo?,
      FileName?
    }
NOT =
  notAllowed
  | element NOT { BooleanExpression }
ArrayRHS =
  notAllowed
  | element ArrayRHS {
      element ArrayVariable { NCName }
    }
NodeReference = NodeId | NodeRef
EQInternal =
  notAllowed
  | element EQInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
NodeCommandHandle = NodeCommandHandleVariable | NodeCommandHandleValue
Sequence =
  notAllowed
  | element Sequence { SequenceType, ColNo?, LineNo?, FileName? }
\string = xsd:string
UncheckedSequence =
  notAllowed
  | element UncheckedSequence {
      SequenceType, ColNo?, LineNo?, FileName?
    }
LookupOnChange =
  notAllowed
  | element LookupOnChange { Name, Tolerance?, Arguments? }
DeclaredVariable =
  IntegerVariable
  | RealVariable
  | BooleanVariable
  | StringVariable
  | (notAllowed
     | element ArrayVariable { NCName })
  | ArrayElement
LookupRHS =
  notAllowed
  | element LookupRHS { Lookup }
NENumeric =
  notAllowed
  | element NENumeric { NumericExpression, NumericExpression }
Skipped =
  notAllowed
  | element Skipped { node-reference }
FileName = attribute FileName { xsd:string }
ArrayElement =
  notAllowed
  | element ArrayElement {
      element Name { NCName },
      element Index { NumericExpression }
    }
Request =
  notAllowed
  | element Request { NodeId?, Pair* }
NodeCommandHandleValue =
  notAllowed
  | element NodeCommandHandleValue {
      xsd:NMTOKEN "COMMAND_ACCEPTED"
      | xsd:NMTOKEN "COMMAND_SUCCESS"
      | xsd:NMTOKEN "COMMAND_RCVD_BY_SYSTEM"
      | xsd:NMTOKEN "COMMAND_SENT_TO_SYSTEM"
      | xsd:NMTOKEN "COMMAND_ABORTED"
      | xsd:NMTOKEN "COMMAND_FAILED"
      | xsd:NMTOKEN "COMMAND_DENIED"
      | xsd:NMTOKEN "COMMAND_ABORT_FAILED"
    }
NumericRHS =
  notAllowed
  | element NumericRHS { NumericExpression }
NodeState = NodeStateVariable | NodeStateValue
InvariantFailed =
  notAllowed
  | element InvariantFailed { node-reference }
DeclareArray =
  notAllowed
  | element DeclareArray {
      element Name { NCName },
      element Type { TypeValues },
      element MaxSize { nonNegativeInteger },
      element InitialValue {
        IntegerValue+ | RealValue+ | BooleanValue+ | StringValue+
      }?
    }
Failed =
  notAllowed
  | element Failed { node-reference }
StringValue =
  notAllowed
  | element StringValue { xsd:string }
AND =
  notAllowed
  | element AND { BooleanExpression* }
RealValue =
  notAllowed
  | element RealValue { xsd:double }
PostconditionFailed =
  notAllowed
  | element PostconditionFailed { node-reference }
GE =
  notAllowed
  | element GE { NumericExpression, NumericExpression }
For =
  notAllowed
  | element For {
      (NodeId?
       & element Comment { \string }?
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?),
      element LoopVariable { DeclareVariable },
      element Condition { BooleanExpression },
      element LoopVariableUpdate { NumericExpression },
      element Action { Action },
      ColNo?,
      LineNo?,
      FileName?
    }
IterationEnded =
  notAllowed
  | element IterationEnded { node-reference }
Interface =
  notAllowed
  | element Interface { In? & InOut? }
Timepoint =
  notAllowed
  | element Timepoint { xsd:NMTOKEN "END" | xsd:NMTOKEN "START" }
element0 =
  element * {
    mixed {
      (attribute * { text }
       | element0)*
    }
  }
RealVariable =
  notAllowed
  | element RealVariable { NCName }
Return =
  notAllowed
  | element Return {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
PreconditionFailed =
  notAllowed
  | element PreconditionFailed { node-reference }
NodeOutcomeVariable =
  notAllowed
  | element NodeOutcomeVariable { node-reference }
Inactive =
  notAllowed
  | element Inactive { node-reference }
Lookup = LookupOnChange | LookupNow
MessageReceived =
  notAllowed
  | element MessageReceived { StringExpression }
DeclareVariable =
  notAllowed
  | element DeclareVariable {
      element Name { NCName },
      element Type { TypeValues },
      element InitialValue { Value }?
    }
NumericExpression =
  ADD
  | SUB
  | MUL
  | DIV
  | SQRT
  | ABS
  | IntegerVariable
  | RealVariable
  | IntegerValue
  | RealValue
  | Lookup
  | NodeTimepointValue
  | (notAllowed
     | element ArraySize { NCName })
  | (notAllowed
     | element ArrayMaxSize { NCName })
  | ArrayElement
BooleanExpression =
  OR
  | XOR
  | AND
  | NOT
  | IsKnown
  | GT
  | GE
  | LT
  | LE
  | EQBoolean
  | EQNumeric
  | EQInternal
  | EQString
  | NEBoolean
  | NENumeric
  | NEInternal
  | NEString
  | BooleanVariable
  | BooleanValue
  | Lookup
  | ArrayElement
  | Finished
  | IterationEnded
  | Executing
  | Waiting
  | Inactive
  | Succeeded
  | Failed
  | Skipped
  | InvariantFailed
  | PreconditionFailed
  | PostconditionFailed
  | ParentFailed
  | MessageReceived
IntegerVariable =
  notAllowed
  | element IntegerVariable { NCName }
While =
  notAllowed
  | element While {
      (NodeId?
       & element Comment { \string }?
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?),
      element Condition { BooleanExpression },
      element Action { Action },
      ColNo?,
      LineNo?,
      FileName?
    }
LibraryNodeDeclaration =
  notAllowed
  | element LibraryNodeDeclaration {
      element Name { NCName },
      element Interface {
        mixed {
          (attribute * { text }
           | element0)*
        }
      }
    }
BooleanValue =
  notAllowed
  | element BooleanValue { xsd:boolean }
OnMessage =
  notAllowed
  | element OnMessage {
      (element Message { StringExpression }
       & NodeId?
       & Action*),
      ColNo?,
      LineNo?,
      FileName?
    }
LT =
  notAllowed
  | element LT { NumericExpression, NumericExpression }
InOut =
  notAllowed
  | element InOut { DeclareVariable+ }
ColNo = attribute ColNo { xsd:integer }
NodeFailureVariable =
  notAllowed
  | element NodeFailureVariable { node-reference }
GlobalDeclarations =
  notAllowed
  | element GlobalDeclarations {
      (CommandDeclaration
       | empty
       | StateDeclaration
       | LibraryNodeDeclaration
       | element TimeScalingUnitsSubunits { xsd:integer })+
    }
Name =
  notAllowed
  | element Name { StringExpression }
NCName = xsd:NCName
GT =
  notAllowed
  | element GT { NumericExpression, NumericExpression }
NodeBody =
  notAllowed
  | element NodeBody {
      NodeList
      | Command
      | Assignment
      | Update
      | Request
      | LibraryNodeCall
    }
InvariantCondition =
  notAllowed
  | element InvariantCondition { BooleanExpression }
Command =
  notAllowed
  | element Command {
      ResourceList?, DeclaredVariable?, Name, Arguments?
    }
Update =
  notAllowed
  | element Update { Pair* }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

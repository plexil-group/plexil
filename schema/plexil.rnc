namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  StartCondition
  | FunctionDeclaration
  | BLOBValue
  | InOut
  | NodeBody
  | InvariantCondition
  | EQInternal
  | IsChanged
  | GlobalDeclarations
  | Node
  | NodeCommandHandleVariable
  | Concat
  | Update
  | Interface
  | EQNumeric
  | OR
  | VariableDeclarations
  | IntegerValue
  | StringValue
  | BooleanRHS
  | NodeFailureVariable
  | AND
  | PreCondition
  | Assignment
  | ArrayValue
  | NumericRHS
  | ArrayElement
  | DeclareArray
  | RepeatCondition
  | High
  | LE
  | Arguments
  | NEInternal
  | EQTime
  | SkipCondition
  | NodeTimepointValue
  | Interval
  | PostCondition
  | Command
  | EndCondition
  | LibraryNodeCall
  | NodeRef
  | StringRHS
  | Alias
  | NENumeric
  | Request
  | Timepoint
  | CommandDeclaration
  | NEBoolean
  | Low
  | LookupRHS
  | LookupNow
  | LookupOnChange
  | ResourceList
  | NodeFailureValue
  | StateDeclaration
  | ArrayRHS
  | LT
  | GT
  | SQRT
  | LookupAtInterval
  | In
  | Name
  | NETime
  | Pair
  | NodeOutcomeVariable
  | GE
  | MUL
  | TimeValue
  | ABS
  | EQBoolean
  | TimeRHS
  | Tolerance
  | RealValue
  | NEString
  | XOR
  | NodeStateVariable
  | EQString
  | Resource
  | DIV
  | FunctionCall
  | SUB
  | IsKnown
  | NodeList
  | (notAllowed
     | element PlexilPlan {  PlexilPlanAttributes?, GlobalDeclarations?, Node })
  | NodeStateValue
  | NOT
  | ADD
  | Parameter
  | DeclareVariable
  | BooleanValue
  | NodeCommandHandleValue
  | Return
  | NodeId
  | NodeOutcomeValue
NCNameOrEmpty = xsd:NCName | xsd:string ""
EQBoolean =
  notAllowed
  | element EQBoolean { BooleanExpression, BooleanExpression }
DeclareVariable =
  notAllowed
  | element DeclareVariable {
      element Name { NCName },
      element Type { TypeValues },
      element InitialValue { Value }?
    }
RepeatCondition =
  notAllowed
  | element RepeatCondition { BooleanExpression }
Node =
  notAllowed
  | element Node {
      attribute NodeType {
        xsd:NMTOKEN "FunctionCall"
        | xsd:NMTOKEN "Assignment"
        | xsd:NMTOKEN "Command"
        | xsd:NMTOKEN "Update"
        | xsd:NMTOKEN "NodeList"
        | xsd:NMTOKEN "LibraryNodeCall"
        | xsd:NMTOKEN "Empty"
        | xsd:NMTOKEN "Request"
      },
      (element Comment { \string }?
       & NodeId
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?
       & NodeBody?)
    }
Timepoint =
  notAllowed
  | element Timepoint { xsd:NMTOKEN "END" | xsd:NMTOKEN "START" }
EndCondition =
  notAllowed
  | element EndCondition { BooleanExpression }
Low =
  notAllowed
  | element Low {
      RealValue
      | element RealVariable { NCName }
    }
Tolerance =
  notAllowed
  | element Tolerance {
      RealValue
      | element RealVariable { NCName }
      | IntegerValue
      | element IntegerVariable { NCName }
    }
TimeExpression =
  (notAllowed
   | element TimeVariable { NCName })
  | TimeValue
  | Lookup
  | ArrayElement
EQTime =
  notAllowed
  | element EQTime { TimeExpression, TimeExpression }
ArrayRHS =
  notAllowed
  | element ArrayRHS {
      element ArrayVariable { NCName }
    }
Concat =
  notAllowed
  | element Concat { StringExpression* }
NodeList =
  notAllowed
  | element NodeList { Node* }
DIV =
  notAllowed
  | element DIV { NumericExpression, NumericExpression }
TimeRHS =
  notAllowed
  | element TimeRHS { TimeExpression }
BLOBValue =
  notAllowed
  | element BLOBValue {
      element ExternalStructName { NCName },
      element InitialValue { integer }?
    }
GlobalDeclarations =
  notAllowed
  | element GlobalDeclarations {
      (CommandDeclaration
       | empty
       | StateDeclaration
       | FunctionDeclaration
       | element TimeScalingUnitsSubunits { integer })+
    }
IsKnown =
  notAllowed
  | element IsKnown {
      DeclaredVariable
      | Lookup
      | NodeStateVariable
      | NodeOutcomeVariable
      | NodeTimepointValue
    }
Resource =
  notAllowed
  | element Resource {
      element ResourceName { StringExpression }
      & element ResourcePriority { NumericExpression }
      & element ResourceLowerBound { NumericExpression }?
      & element ResourceUpperBound { NumericExpression }?
      & element ResourceReleaseAtTermination { BooleanExpression }?
    }
\string = xsd:string
Alias =
  notAllowed
  | element Alias {
      element NodeParameter { NCName },
      (Value | DeclaredVariable)
    }
PreCondition =
  notAllowed
  | element PreCondition { BooleanExpression }
Command =
  notAllowed
  | element Command {
      ResourceList?,
      DeclaredVariable*,
      (Name
       | element CommandName { \string }),
      Arguments?
    }
ArrayValue =
  notAllowed
  | element ArrayValue { AtomicValue* }
EQString =
  notAllowed
  | element EQString { StringExpression, StringExpression }
NodeFailureVariable =
  notAllowed
  | element NodeFailureVariable { NodeRef | NodeId }
Interval =
  notAllowed
  | element Interval { Low?, High }
NodeId =
  notAllowed
  | element NodeId { NCName }
In =
  notAllowed
  | element In { (DeclareVariable | DeclareArray)+ }
NumericExpression =
  ADD
  | SUB
  | MUL
  | DIV
  | SQRT
  | ABS
  | (notAllowed
     | element IntegerVariable { NCName })
  | (notAllowed
     | element RealVariable { NCName })
  | IntegerValue
  | RealValue
  | (notAllowed
     | element TimeVariable { NCName })
  | TimeValue
  | Lookup
  | NodeTimepointValue
  | (notAllowed
     | element ArraySize { NCName })
  | (notAllowed
     | element ArrayMaxSize { NCName })
  | ArrayElement
NodeCommandHandle = NodeCommandHandleVariable | NodeCommandHandleValue
TimeValue =
  notAllowed
  | element TimeValue {
      element Units { IntegerValue },
      element SubUnits { IntegerValue }?
    }
TypeValues =
  xsd:NMTOKEN "String"
  | xsd:NMTOKEN "Time"
  | xsd:NMTOKEN "Integer"
  | xsd:NMTOKEN "Array"
  | xsd:NMTOKEN "Boolean"
  | xsd:NMTOKEN "BLOB"
  | xsd:NMTOKEN "Real"
NodeFailure = NodeFailureVariable | NodeFailureValue
StartCondition =
  notAllowed
  | element StartCondition { BooleanExpression }
LT =
  notAllowed
  | element LT { NumericExpression, NumericExpression }
NodeCommandHandleVariable =
  notAllowed
  | element NodeCommandHandleVariable { NodeId }
NodeRef =
  notAllowed
  | element NodeRef {
      attribute dir {
        xsd:NMTOKEN "child"
        | xsd:NMTOKEN "self"
        | xsd:NMTOKEN "sibling"
        | xsd:NMTOKEN "parent"
      }?,
      NCNameOrEmpty
    }
SQRT =
  notAllowed
  | element SQRT { NumericExpression }
ResourceList =
  notAllowed
  | element ResourceList { Resource* }
LookupNow =
  notAllowed
  | element LookupNow {
      (Name
       | element StateName { \string }),
      Arguments?
    }
OR =
  notAllowed
  | element OR { BooleanExpression* }
CommandDeclaration =
  notAllowed
  | element CommandDeclaration {
      ExternalCallDeclaration, ResourceList?
    }
NodeStateVariable =
  notAllowed
  | element NodeStateVariable { NodeRef | NodeId }
VariableDeclarations =
  notAllowed
  | element VariableDeclarations { (DeclareVariable | DeclareArray)+ }
MUL =
  notAllowed
  | element MUL {
      NumericExpression, NumericExpression, NumericExpression*
    }
EQInternal =
  notAllowed
  | element EQInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
SUB =
  notAllowed
  | element SUB { NumericExpression, NumericExpression }
NodeOutcomeValue =
  notAllowed
  | element NodeOutcomeValue {
      xsd:NMTOKEN "SKIPPED"
      | xsd:NMTOKEN "SUCCESS"
      | xsd:NMTOKEN "FAILURE"
    }
InOut =
  notAllowed
  | element InOut { (DeclareVariable | DeclareArray)+ }
NEBoolean =
  notAllowed
  | element NEBoolean { BooleanExpression, BooleanExpression }
EQNumeric =
  notAllowed
  | element EQNumeric { NumericExpression, NumericExpression }
GE =
  notAllowed
  | element GE { NumericExpression, NumericExpression }
NodeCommandHandleValue =
  notAllowed
  | element NodeCommandHandleValue {
      xsd:NMTOKEN "COMMAND_ACCEPTED"
      | xsd:NMTOKEN "COMMAND_SUCCESS"
      | xsd:NMTOKEN "COMMAND_RCVD_BY_SYSTEM"
      | xsd:NMTOKEN "COMMAND_SENT_TO_SYSTEM"
      | xsd:NMTOKEN "COMMAND_FAILED"
      | xsd:NMTOKEN "COMMAND_DENIED"
    }
StringExpression =
  (notAllowed
   | element StringVariable { xsd:token })
  | StringValue
  | Concat
  | Lookup
  | ArrayElement
Name =
  notAllowed
  | element Name { StringExpression }
Update =
  notAllowed
  | element Update { Pair* }
NodeFailureValue =
  notAllowed
  | element NodeFailureValue {
      xsd:NMTOKEN "INVARIANT_CONDITION_FAILED"
      | xsd:NMTOKEN "POST_CONDITION_FAILED"
      | xsd:NMTOKEN "PRE_CONDITION_FAILED"
      | xsd:NMTOKEN "PARENT_FAILED"
    }
NodeTimepointValue =
  notAllowed
  | element NodeTimepointValue {
      (NodeRef | NodeId), NodeStateValue, Timepoint
    }
BooleanValue =
  notAllowed
  | element BooleanValue { xsd:boolean }
IntegerValue =
  notAllowed
  | element IntegerValue { xsd:integer }
LE =
  notAllowed
  | element LE { NumericExpression, NumericExpression }
Assignment =
  notAllowed
  | element Assignment {
      (DeclaredVariable+ | ArrayElement+),
      (BooleanRHS
       | NumericRHS
       | StringRHS
       | TimeRHS
       | LookupRHS
       | ArrayRHS)
    }
Lookup = LookupAtInterval | LookupOnChange | LookupNow
StringValue =
  notAllowed
  | element StringValue { xsd:string }
Request =
  notAllowed
  | element Request { NodeRef, Pair* }
High =
  notAllowed
  | element High {
      RealValue
      | element RealVariable { NCName }
    }
NENumeric =
  notAllowed
  | element NENumeric { NumericExpression, NumericExpression }
StringRHS =
  notAllowed
  | element StringRHS { StringExpression }
LookupRHS =
  notAllowed
  | element LookupRHS { Lookup }
ADD =
  notAllowed
  | element ADD {
      NumericExpression, NumericExpression, NumericExpression*
    }
SkipCondition =
  notAllowed
  | element SkipCondition { BooleanExpression }
RealValue =
  notAllowed
  | element RealValue { xsd:double }
IsChanged =
  notAllowed
  | element IsChanged {
      element StateName { \string }
    }
BooleanExpression =
  OR
  | XOR
  | AND
  | NOT
  | IsKnown
  | IsChanged
  | GT
  | GE
  | LT
  | LE
  | EQBoolean
  | EQNumeric
  | EQInternal
  | EQString
  | EQTime
  | NEBoolean
  | NENumeric
  | NEInternal
  | NEString
  | NETime
  | (notAllowed
     | element BooleanVariable { NCName })
  | BooleanValue
  | Lookup
  | ArrayElement
NEInternal =
  notAllowed
  | element NEInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
DeclaredVariable =
  (notAllowed
   | element IntegerVariable { NCName })
  | (notAllowed
     | element RealVariable { NCName })
  | (notAllowed
     | element BooleanVariable { NCName })
  | (notAllowed
     | element StringVariable { NCName })
  | (notAllowed
     | element BLOBVariable { NCName })
  | (notAllowed
     | element TimeVariable { NCName })
  | (notAllowed
     | element ArrayVariable { NCName })
  | ArrayElement
InvariantCondition =
  notAllowed
  | element InvariantCondition { BooleanExpression }
Return =
  notAllowed
  | element Return {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Time"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "BLOB"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
Arguments =
  notAllowed
  | element Arguments { (Value | DeclaredVariable)+ }
LookupOnChange =
  notAllowed
  | element LookupOnChange {
      (Name
       | element StateName { \string }),
      Tolerance?,
      Arguments?
    }
NodeBody =
  notAllowed
  | element NodeBody {
      NodeList
      | Command
      | Assignment
      | FunctionCall
      | Update
      | Request
      | LibraryNodeCall
    }
Interface =
  notAllowed
  | element Interface { In? & InOut? }
AtomicValue =
  IntegerValue
  | RealValue
  | BooleanValue
  | StringValue
  | TimeValue
  | BLOBValue
LookupAtInterval =
  notAllowed
  | element LookupAtInterval {
      (Name
       | element StateName { \string }),
      Interval,
      Arguments?
    }
DeclareArray =
  notAllowed
  | element DeclareArray {
      element Name { NCName },
      element Type { TypeValues },
      element MaxSize { nonNegativeInteger },
      (element InitialValue { AtomicValue }
       | empty
       | element FillValue { AtomicValue+ })
    }
GT =
  notAllowed
  | element GT { NumericExpression, NumericExpression }
NodeOutcomeVariable =
  notAllowed
  | element NodeOutcomeVariable { NodeRef | NodeId }
NumericRHS =
  notAllowed
  | element NumericRHS { NumericExpression }
integer = xsd:integer
NodeOutcome = NodeOutcomeVariable | NodeOutcomeValue
XOR =
  notAllowed
  | element XOR { BooleanExpression* }
ArrayElement =
  notAllowed
  | element ArrayElement {
      element Name { NCName },
      element Index { NumericExpression }
    }
NodeState = NodeStateVariable | NodeStateValue
BooleanRHS =
  notAllowed
  | element BooleanRHS { BooleanExpression }
StateDeclaration =
  notAllowed
  | element StateDeclaration { ExternalCallDeclaration }
Parameter =
  notAllowed
  | element Parameter {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Time"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "BLOB"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
NCName = xsd:NCName
LibraryNodeCall =
  notAllowed
  | element LibraryNodeCall { NodeId, Alias* }
Pair =
  notAllowed
  | element Pair {
      element Name { NCName },
      (Value | DeclaredVariable | LookupNow)
    }
NETime =
  notAllowed
  | element NETime { TimeExpression, TimeExpression }
FunctionCall =
  notAllowed
  | element FunctionCall {
      DeclaredVariable*,
      element Name { NCName },
      Arguments?
    }
nonNegativeInteger = xsd:nonNegativeInteger
NodeStateValue =
  notAllowed
  | element NodeStateValue {
      xsd:NMTOKEN "INACTIVE"
      | xsd:NMTOKEN "WAITING"
      | xsd:NMTOKEN "FINISHED"
      | xsd:NMTOKEN "ITERATION_ENDED"
      | xsd:NMTOKEN "EXECUTING"
      | xsd:NMTOKEN "FAILING"
      | xsd:NMTOKEN "FINISHING"
    }
FunctionDeclaration =
  notAllowed
  | element FunctionDeclaration { ExternalCallDeclaration }
ExternalCallDeclaration =
  (notAllowed
   | element Name { NCName }),
  Return*,
  Parameter*
NOT =
  notAllowed
  | element NOT { BooleanExpression }
Value =
  IntegerValue
  | RealValue
  | BooleanValue
  | StringValue
  | TimeValue
  | BLOBValue
  | ArrayValue
PostCondition =
  notAllowed
  | element PostCondition { BooleanExpression }
ABS =
  notAllowed
  | element ABS { NumericExpression }
AND =
  notAllowed
  | element AND { BooleanExpression* }
NEString =
  notAllowed
  | element NEString { StringExpression, StringExpression }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

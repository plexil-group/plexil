<PlexilPlan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <For>
    <LoopVariable>
      <DeclareVariable>
        <Name>count</Name>
        <Type>Real</Type>
        <InitialValue>
          <RealValue>0.0</RealValue>
        </InitialValue>
      </DeclareVariable>
    </LoopVariable>
    <Condition>
      <LT>
        <RealVariable>count</RealVariable>
        <RealValue>1.0</RealValue>
      </LT>
    </Condition>
    <LoopVariableUpdate>
      <ADD>
        <RealVariable>count</RealVariable>
        <RealValue>0.2</RealValue>
      </ADD>
    </LoopVariableUpdate>
    <Actions>
      <Node NodeType="Empty">
        <NodeId>One</NodeId>
      </Node>
      <Node NodeType="Empty">
        <NodeId>Two</NodeId>
      </Node>
      <Node NodeType="Empty">
        <NodeId>Three</NodeId>
        <StartCondition>
          <NodeFinished>Two</NodeFinished>
        </StartCondition>
      </Node>
    </Actions>
  </For>
</PlexilPlan>


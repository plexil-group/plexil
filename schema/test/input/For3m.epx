<PlexilPlan>
  <GlobalDeclarations>
    <DeclareMutex>
      <Name>m</Name>
    </DeclareMutex>
  </GlobalDeclarations>

  <For>
    <LoopVariable>
      <DeclareVariable>
        <Name>count</Name>
        <Type>Real</Type>
        <InitialValue>
          <RealValue>0.0</RealValue>
        </InitialValue>
      </DeclareVariable>
    </LoopVariable>
    <Condition>
      <LT>
        <RealVariable>count</RealVariable>
        <RealValue>1.0</RealValue>
      </LT>
    </Condition>
    <LoopVariableUpdate>
      <ADD>
        <RealVariable>count</RealVariable>
        <RealValue>0.2</RealValue>
      </ADD>
    </LoopVariableUpdate>
    <Action>
      <Concurrence>
        <UsingMutex>
          <Name>m</Name>
        </UsingMutex>

        <Node NodeType="Empty">
          <NodeId>One</NodeId>
        </Node>
        <Node NodeType="Empty">
          <NodeId>Three</NodeId>
        </Node>
      </Concurrence>
    </Action>
  </For>
</PlexilPlan>


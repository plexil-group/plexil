namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  StartCondition
  | InOut
  | NodeBody
  | Date
  | BooleanVariable
  | InvariantCondition
  | EQInternal
  | StringVariable
  | GlobalDeclarations
  | Node
  | NodeCommandHandleVariable
  | Concat
  | Update
  | Interface
  | RealVariable
  | EQNumeric
  | OR
  | VariableDeclarations
  | IntegerValue
  | StringValue
  | BooleanRHS
  | NodeFailureVariable
  | AND
  | PreCondition
  | Assignment
  | NumericRHS
  | ArrayElement
  | DeclareArray
  | RepeatCondition
  | LE
  | Arguments
  | (notAllowed
     | element TimeInterval {
         element Start { TimePoint }
         & element End { TimePoint }
         & element Duration { Duration }
       })
  | NEInternal
  | SkipCondition
  | NodeTimepointValue
  | PostCondition
  | Command
  | Duration
  | EndCondition
  | LibraryNodeCall
  | StringRHS
  | NodeRef
  | Alias
  | NENumeric
  | Request
  | Timepoint
  | Time
  | CommandDeclaration
  | NEBoolean
  | LookupRHS
  | LookupNow
  | LookupOnChange
  | ResourceList
  | NodeFailureValue
  | StateDeclaration
  | ArrayRHS
  | LT
  | GT
  | LibraryNodeDeclaration
  | SQRT
  | In
  | Name
  | TimePoint
  | Pair
  | NodeOutcomeVariable
  | GE
  | MUL
  | ABS
  | IntegerVariable
  | EQBoolean
  | Tolerance
  | RealValue
  | NEString
  | XOR
  | NodeStateVariable
  | EQString
  | Resource
  | DIV
  | FunctionCall
  | SUB
  | IsKnown
  | NodeList
  | (notAllowed
     | element PlexilPlan {
         ColNo?, LineNo?, FileName?, GlobalDeclarations?, Action
       })
  | NodeStateValue
  | NOT
  | ADD
  | Parameter
  | DeclareVariable
  | BooleanValue
  | NodeCommandHandleValue
  | NodeId
  | Return
  | NodeOutcomeValue
NodeStateVariable =
  notAllowed
  | element NodeStateVariable { node-reference }
XOR =
  notAllowed
  | element XOR { BooleanExpression* }
ADD =
  notAllowed
  | element ADD {
      NumericExpression, NumericExpression, NumericExpression*
    }
EQString =
  notAllowed
  | element EQString { StringExpression, StringExpression }
NEInternal =
  notAllowed
  | element NEInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
CommandDeclaration =
  notAllowed
  | element CommandDeclaration {
      element Name { NCName },
      Return*,
      Parameter*,
      ResourceList?
    }
Pair =
  notAllowed
  | element Pair {
      element Name { NCName },
      (Value | DeclaredVariable | LookupNow)
    }
IsKnown =
  notAllowed
  | element IsKnown {
      DeclaredVariable
      | Lookup
      | NodeStateVariable
      | NodeOutcomeVariable
      | NodeTimepointValue
    }
Date =
  notAllowed
  | element Date {
      element Year { integer }
      & element Month { integer }
      & element Day { integer }
    }
Request =
  notAllowed
  | element Request { NodeId?, Pair* }
EQNumeric =
  notAllowed
  | element EQNumeric { NumericExpression, NumericExpression }
Action = Node
NodeFailure = NodeFailureVariable | NodeFailureValue
PreCondition =
  notAllowed
  | element PreCondition { BooleanExpression }
SkipCondition =
  notAllowed
  | element SkipCondition { BooleanExpression }
Name =
  notAllowed
  | element Name { StringExpression }
Node =
  notAllowed
  | element Node {
      ColNo?,
      LineNo?,
      FileName?,
      attribute epx {
        xsd:NMTOKEN "UncheckedSequence"
        | xsd:NMTOKEN "Then"
        | xsd:NMTOKEN "Else"
        | xsd:NMTOKEN "Sequence"
        | xsd:NMTOKEN "If"
        | xsd:NMTOKEN "While"
        | xsd:NMTOKEN "For"
        | xsd:NMTOKEN "Concurrence"
        | xsd:NMTOKEN "aux"
        | xsd:NMTOKEN "Try"
      }?,
      attribute NodeType {
        xsd:NMTOKEN "FunctionCall"
        | xsd:NMTOKEN "Assignment"
        | xsd:NMTOKEN "Command"
        | xsd:NMTOKEN "Update"
        | xsd:NMTOKEN "NodeList"
        | xsd:NMTOKEN "LibraryNodeCall"
        | xsd:NMTOKEN "Empty"
        | xsd:NMTOKEN "Request"
      },
      (element Comment { \string }?
       & NodeId
       & StartCondition?
       & RepeatCondition?
       & PreCondition?
       & PostCondition?
       & InvariantCondition?
       & EndCondition?
       & SkipCondition?
       & element Priority { nonNegativeInteger }?
       & element Permissions { \string }?
       & Interface?
       & VariableDeclarations?
       & NodeBody?)
    }
node-reference = NodeReference, empty
StringValue =
  notAllowed
  | element StringValue { xsd:string }
float = xsd:float
NumericRHS =
  notAllowed
  | element NumericRHS { NumericExpression }
PostCondition =
  notAllowed
  | element PostCondition { BooleanExpression }
SUB =
  notAllowed
  | element SUB { NumericExpression, NumericExpression }
BooleanRHS =
  notAllowed
  | element BooleanRHS { BooleanExpression }
Timepoint =
  notAllowed
  | element Timepoint { xsd:NMTOKEN "END" | xsd:NMTOKEN "START" }
InOut =
  notAllowed
  | element InOut { DeclareVariable+ }
MUL =
  notAllowed
  | element MUL {
      NumericExpression, NumericExpression, NumericExpression*
    }
NodeOutcomeVariable =
  notAllowed
  | element NodeOutcomeVariable { node-reference }
EndCondition =
  notAllowed
  | element EndCondition { BooleanExpression }
BooleanVariable =
  notAllowed
  | element BooleanVariable { NCName }
LineNo = attribute LineNo { xsd:integer }
Parameter =
  notAllowed
  | element Parameter {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "Duration"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
NodeList =
  notAllowed
  | element NodeList { Action* }
GT =
  notAllowed
  | element GT { NumericExpression, NumericExpression }
RepeatCondition =
  notAllowed
  | element RepeatCondition { BooleanExpression }
NOT =
  notAllowed
  | element NOT { BooleanExpression }
NEBoolean =
  notAllowed
  | element NEBoolean { BooleanExpression, BooleanExpression }
LE =
  notAllowed
  | element LE { NumericExpression, NumericExpression }
DeclareVariable =
  notAllowed
  | element DeclareVariable {
      element Name { NCName },
      element Type { TypeValues },
      element InitialValue { Value }?
    }
StringExpression =
  StringVariable | StringValue | Concat | Lookup | ArrayElement
LookupRHS =
  notAllowed
  | element LookupRHS { Lookup }
DeclareArray =
  notAllowed
  | element DeclareArray {
      element Name { NCName },
      element Type { TypeValues },
      element MaxSize { nonNegativeInteger },
      element InitialValue {
        IntegerValue+ | RealValue+ | BooleanValue+ | StringValue+
      }?
    }
NodeFailureValue =
  notAllowed
  | element NodeFailureValue {
      xsd:NMTOKEN "INVARIANT_CONDITION_FAILED"
      | xsd:NMTOKEN "POST_CONDITION_FAILED"
      | xsd:NMTOKEN "PRE_CONDITION_FAILED"
      | xsd:NMTOKEN "PARENT_FAILED"
    }
NodeId =
  notAllowed
  | element NodeId { NCName }
LookupNow =
  notAllowed
  | element LookupNow {
      (Name
       | element StateName { \string }),
      Arguments?
    }
TimePoint =
  notAllowed
  | element TimePoint { Date & Time }
NodeRef =
  notAllowed
  | element NodeRef {
      attribute dir {
        xsd:NMTOKEN "child"
        | xsd:NMTOKEN "self"
        | xsd:NMTOKEN "sibling"
        | xsd:NMTOKEN "parent"
      }?,
      NCNameOrEmpty
    }
NodeCommandHandleVariable =
  notAllowed
  | element NodeCommandHandleVariable { NodeId }
EQInternal =
  notAllowed
  | element EQInternal {
      (NodeState, NodeState)
      | (NodeOutcome, NodeOutcome)
      | (NodeFailure, NodeFailure)
      | (NodeCommandHandle, NodeCommandHandle)
    }
LookupOnChange =
  notAllowed
  | element LookupOnChange {
      (Name
       | element StateName { \string }),
      Tolerance?,
      Arguments?
    }
ResourceList =
  notAllowed
  | element ResourceList { Resource* }
NodeTimepointValue =
  notAllowed
  | element NodeTimepointValue {
      NodeReference, NodeStateValue, Timepoint
    }
RealVariable =
  notAllowed
  | element RealVariable { NCName }
NCNameOrEmpty = xsd:NCName | xsd:string ""
Assignment =
  notAllowed
  | element Assignment {
      DeclaredVariable,
      (BooleanRHS | NumericRHS | StringRHS | LookupRHS | ArrayRHS)
    }
EQBoolean =
  notAllowed
  | element EQBoolean { BooleanExpression, BooleanExpression }
NodeCommandHandle = NodeCommandHandleVariable | NodeCommandHandleValue
Lookup = LookupOnChange | LookupNow
StringVariable =
  notAllowed
  | element StringVariable { NCName }
TypeValues =
  xsd:NMTOKEN "String"
  | xsd:NMTOKEN "Integer"
  | xsd:NMTOKEN "Array"
  | xsd:NMTOKEN "Boolean"
  | xsd:NMTOKEN "Duration"
  | xsd:NMTOKEN "Real"
NodeState = NodeStateVariable | NodeStateValue
Duration =
  notAllowed
  | element Duration {
      element Days { integer }
      & element Hours { integer }
      & element Minutes { integer }
      & element Seconds { float }
    }
StateDeclaration =
  notAllowed
  | element StateDeclaration {
      element Name { NCName },
      Return,
      Parameter*
    }
NodeOutcomeValue =
  notAllowed
  | element NodeOutcomeValue {
      xsd:NMTOKEN "SKIPPED"
      | xsd:NMTOKEN "SUCCESS"
      | xsd:NMTOKEN "FAILURE"
    }
StartCondition =
  notAllowed
  | element StartCondition { BooleanExpression }
VariableDeclarations =
  notAllowed
  | element VariableDeclarations { (DeclareVariable | DeclareArray)+ }
NodeCommandHandleValue =
  notAllowed
  | element NodeCommandHandleValue {
      xsd:NMTOKEN "COMMAND_ACCEPTED"
      | xsd:NMTOKEN "COMMAND_SUCCESS"
      | xsd:NMTOKEN "COMMAND_RCVD_BY_SYSTEM"
      | xsd:NMTOKEN "COMMAND_SENT_TO_SYSTEM"
      | xsd:NMTOKEN "COMMAND_FAILED"
      | xsd:NMTOKEN "COMMAND_DENIED"
    }
ABS =
  notAllowed
  | element ABS { NumericExpression }
AND =
  notAllowed
  | element AND { BooleanExpression* }
Arguments =
  notAllowed
  | element Arguments {
      (IntegerValue
       | RealValue
       | BooleanValue
       | StringValue
       | DeclaredVariable)+
    }
Value = IntegerValue | RealValue | BooleanValue | StringValue
Concat =
  notAllowed
  | element Concat { StringExpression* }
NodeReference = NodeId | NodeRef
DeclaredVariable =
  IntegerVariable
  | RealVariable
  | BooleanVariable
  | StringVariable
  | (notAllowed
     | element ArrayVariable { NCName })
  | ArrayElement
StringRHS =
  notAllowed
  | element StringRHS { StringExpression }
ArrayElement =
  notAllowed
  | element ArrayElement {
      element Name { NCName },
      element Index { NumericExpression }
    }
Tolerance =
  notAllowed
  | element Tolerance { RealValue | RealVariable }
integer = xsd:integer
SQRT =
  notAllowed
  | element SQRT { NumericExpression }
BooleanExpression =
  OR
  | XOR
  | AND
  | NOT
  | IsKnown
  | GT
  | GE
  | LT
  | LE
  | EQBoolean
  | EQNumeric
  | EQInternal
  | EQString
  | NEBoolean
  | NENumeric
  | NEInternal
  | NEString
  | BooleanVariable
  | BooleanValue
  | Lookup
  | ArrayElement
FileName = attribute FileName { xsd:string }
LT =
  notAllowed
  | element LT { NumericExpression, NumericExpression }
Resource =
  notAllowed
  | element Resource {
      element ResourceName { StringExpression }
      & element ResourcePriority { NumericExpression }
      & element ResourceLowerBound { NumericExpression }?
      & element ResourceUpperBound { NumericExpression }?
      & element ResourceReleaseAtTermination { BooleanExpression }?
    }
NodeFailureVariable =
  notAllowed
  | element NodeFailureVariable { node-reference }
DIV =
  notAllowed
  | element DIV { NumericExpression, NumericExpression }
Alias =
  notAllowed
  | element Alias {
      element NodeParameter { NCName },
      (Value | DeclaredVariable)
    }
NodeOutcome = NodeOutcomeVariable | NodeOutcomeValue
Update =
  notAllowed
  | element Update { Pair* }
OR =
  notAllowed
  | element OR { BooleanExpression* }
BooleanValue =
  notAllowed
  | element BooleanValue { xsd:boolean }
ArrayRHS =
  notAllowed
  | element ArrayRHS {
      element ArrayVariable { NCName }
    }
IntegerValue =
  notAllowed
  | element IntegerValue { xsd:integer }
Interface =
  notAllowed
  | element Interface { In? & InOut? }
IntegerVariable =
  notAllowed
  | element IntegerVariable { NCName }
element0 =
  element * {
    mixed {
      (attribute * { text }
       | element0)*
    }
  }
Return =
  notAllowed
  | element Return {
      attribute Type {
        xsd:NMTOKEN "String"
        | xsd:NMTOKEN "Integer"
        | xsd:NMTOKEN "Array"
        | xsd:NMTOKEN "Boolean"
        | xsd:NMTOKEN "Duration"
        | xsd:NMTOKEN "Real"
      },
      NCNameOrEmpty
    }
\string = xsd:string
GE =
  notAllowed
  | element GE { NumericExpression, NumericExpression }
NumericExpression =
  ADD
  | SUB
  | MUL
  | DIV
  | SQRT
  | ABS
  | IntegerVariable
  | RealVariable
  | IntegerValue
  | RealValue
  | Lookup
  | NodeTimepointValue
  | (notAllowed
     | element ArraySize { NCName })
  | (notAllowed
     | element ArrayMaxSize { NCName })
  | ArrayElement
  | Duration
LibraryNodeDeclaration =
  notAllowed
  | element LibraryNodeDeclaration {
      element Name { NCName },
      element Interface {
        mixed {
          (attribute * { text }
           | element0)*
        }
      }
    }
LibraryNodeCall =
  notAllowed
  | element LibraryNodeCall {
      NodeId,
      element RenameNodeId { NCName }?,
      Alias*
    }
RealValue =
  notAllowed
  | element RealValue { xsd:double }
In =
  notAllowed
  | element In { DeclareVariable+ }
nonNegativeInteger = xsd:nonNegativeInteger
ColNo = attribute ColNo { xsd:integer }
NCName = xsd:NCName
NodeStateValue =
  notAllowed
  | element NodeStateValue {
      xsd:NMTOKEN "INACTIVE"
      | xsd:NMTOKEN "WAITING"
      | xsd:NMTOKEN "FINISHED"
      | xsd:NMTOKEN "ITERATION_ENDED"
      | xsd:NMTOKEN "EXECUTING"
      | xsd:NMTOKEN "FAILING"
      | xsd:NMTOKEN "FINISHING"
    }
GlobalDeclarations =
  notAllowed
  | element GlobalDeclarations {
      (CommandDeclaration
       | empty
       | StateDeclaration
       | LibraryNodeDeclaration
       | element TimeScalingUnitsSubunits { integer })+
    }
NENumeric =
  notAllowed
  | element NENumeric { NumericExpression, NumericExpression }
NodeBody =
  notAllowed
  | element NodeBody {
      NodeList
      | Command
      | Assignment
      | FunctionCall
      | Update
      | Request
      | LibraryNodeCall
    }
NEString =
  notAllowed
  | element NEString { StringExpression, StringExpression }
InvariantCondition =
  notAllowed
  | element InvariantCondition { BooleanExpression }
Command =
  notAllowed
  | element Command {
      ResourceList?,
      DeclaredVariable?,
      (Name
       | element CommandName { \string }),
      Arguments?
    }
FunctionCall =
  notAllowed
  | element FunctionCall {
      DeclaredVariable?,
      (Name
       | element FunctionName { \string }),
      Arguments?
    }
Time =
  notAllowed
  | element Time {
      element Hour { integer }
      & element Minute { integer }
      & element Second { float }
      & element Offset { integer }
    }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

<!-- This schema defines proposed extensions to PLEXIL (macros for Core PLEXIL)
     that are not yet implemented.  -->


<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xml:lang="en">
  <xsd:include schemaLocation='extended-plexil.xsd'/>

  <xsd:redefine schemaLocation='extended-plexil.xsd'>
    <xsd:group name="Action">
      <xsd:choice>
        <xsd:element ref="Node"/>
        <xsd:element ref="Sequence"/>
        <xsd:element ref="Concurrence"/>
        <xsd:element ref="UncheckedSequence"/>
        <xsd:element ref="Try"/>
        <xsd:element ref="If"/>
        <xsd:element ref="While"/>
        <xsd:element ref="For"/>
        <xsd:element ref="OnCommand"/>
        <xsd:element ref="OnMessage"/>
        <xsd:element ref="BlockingCommand"/>
        <xsd:element ref="NonBlockingCommand"/>
        <xsd:element ref="Wait"/>
      </xsd:choice>
    </xsd:group>
  </xsd:redefine>


<!-- Abstraction for waiting an amount of time -->

  <xsd:element name="Wait">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:group ref="NodeClauses" minOccurs="0" maxOccurs="unbounded"/>
        <xsd:element name="Units" type= "real-expression"/>
        <xsd:element ref="Tolerance" minOccurs="0"/>
      </xsd:sequence>
      <xsd:attributeGroup ref="SourceLocators"/>
    </xsd:complexType>
  </xsd:element>


<!-- The rest of this file is nearing deprecation... -->

  <xsd:group name="CommandType">
    <xsd:sequence>
      <xsd:all>
        <xsd:group ref="NodeClauses"/>
        <xsd:element ref="ResourceList" minOccurs="0" maxOccurs="1"/>  
        <xsd:group ref="DeclaredVariable" minOccurs="0"/>
        <xsd:element ref="Name"/>
        <xsd:element ref="Arguments" minOccurs="0"/>
        <xsd:element ref="Timeout" minOccurs="0"/>
      </xsd:all>
    </xsd:sequence>
  </xsd:group>

  <xsd:element name="BlockingCommand">
    <xsd:complexType>
      <xsd:all>
        <xsd:group ref="CommandType"/>
      </xsd:all>
      <xsd:attributeGroup ref="SourceLocators"/>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="NonBlockingCommand">
    <xsd:complexType>
      <xsd:all>
        <xsd:group ref="CommandType"/>
      </xsd:all>
      <xsd:attributeGroup ref="SourceLocators"/>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="Timeout">
    <xsd:choice>
      <xsd:element ref="RealValue"/>
      <xsd:element ref="RealVariable"/>
    </xsd:choice>
  </xsd:element>

</xsd:schema>

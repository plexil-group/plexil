namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  SendPlan
  | Command
  | Simultaneous
  | Script
  | Param
  | State
  | InitialState
  | CommandAbort
  | UpdateAck
  | CommandAck
  | (notAllowed
     | element PLEXILScript { InitialState?, Script })
SendPlan =
  notAllowed
  | element SendPlan {
      attribute file { xsd:string }?
    }
Param =
  notAllowed
  | element Param { type?, xsd:string }
element0 =
  element * {
    mixed {
      (attribute * { text }
       | element0)*
    }
  }
type =
  attribute type {
    xsd:NMTOKEN "real"
    | xsd:NMTOKEN "int-array"
    | xsd:NMTOKEN "string-array"
    | xsd:NMTOKEN "int"
    | xsd:NMTOKEN "string"
    | xsd:NMTOKEN "bool"
    | xsd:NMTOKEN "bool-array"
    | xsd:NMTOKEN "real-array"
  }
InitialState =
  notAllowed
  | element InitialState { State* }
UpdateAck =
  notAllowed
  | element UpdateAck {
      attribute name { xsd:string }?
    }
Command =
  notAllowed
  | element Command { command-type }
State =
  notAllowed
  | element State {
      type?,
      attribute name { xsd:string }?,
      Param*,
      element Value { \string }+
    }
Script =
  notAllowed
  | element Script {
      (State
       | UpdateAck
       | Command
       | CommandAck
       | CommandAbort
       | Simultaneous
       | SendPlan
       | element Delay {
           mixed {
             (attribute * { text }
              | element0)*
           }
         })*
    }
CommandAbort =
  notAllowed
  | element CommandAbort { command-type }
\string = xsd:string
command-type =
  (type?,
   attribute name { xsd:string }?,
   Param*,
   (notAllowed
    | element Result { \string })+),
  empty
CommandAck =
  notAllowed
  | element CommandAck { command-type }
Simultaneous =
  notAllowed
  | element Simultaneous {
      (State | UpdateAck | Command | CommandAck | CommandAbort)*
    }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

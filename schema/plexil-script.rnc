namespace xsi = "http://www.w3.org/2001/XMLSchema-instance"
default namespace = ""

start =
  Command
  | Simultaneous
  | Script
  | Param
  | State
  | InitialState
  | CommandAbort
  | UpdateAck
  | CommandAck
  | (notAllowed
     | element PLEXILScript { InitialState?, Script })
Simultaneous =
  notAllowed
  | element Simultaneous {
      (State | UpdateAck | Command | CommandAck | CommandAbort)*
    }
type =
  attribute type {
    xsd:NMTOKEN "real"
    | xsd:NMTOKEN "int-array"
    | xsd:NMTOKEN "string-array"
    | xsd:NMTOKEN "int"
    | xsd:NMTOKEN "string"
    | xsd:NMTOKEN "bool"
    | xsd:NMTOKEN "bool-array"
    | xsd:NMTOKEN "real-array"
  }
CommandAck =
  notAllowed
  | element CommandAck { command-type }
CommandAbort =
  notAllowed
  | element CommandAbort { command-type }
State =
  notAllowed
  | element State {
      type?,
      attribute name { xsd:string }?,
      Param*,
      element Value { \string }+
    }
\string = xsd:string
command-type =
  (type?,
   attribute name { xsd:string }?,
   Param*,
   (notAllowed
    | element Result { \string })+),
  empty
Param =
  notAllowed
  | element Param { type?, xsd:string }
Script =
  notAllowed
  | element Script {
      (State
       | UpdateAck
       | Command
       | CommandAck
       | CommandAbort
       | Simultaneous)*
    }
InitialState =
  notAllowed
  | element InitialState { State* }
UpdateAck =
  notAllowed
  | element UpdateAck {
      attribute name { xsd:string }?
    }
Command =
  notAllowed
  | element Command { command-type }
PlexilPlanAttributes = 
  notAllowed
  | attribute xsi:* { xsd:anyURI }*

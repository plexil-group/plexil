#Validate file
valid()
{
  if [ ! -e $1 ] && [ $quiet = 1 ]
    then
      echo "WARNING: $1 does not exist"
  fi
  return
}

validNum()
{
  if (( ! "$1" > 0 ))
    then    	
  	echo "Error: $1 is not a legal parameter for $2"
	exit 2
  fi
}

warn()
{
   if [ $quiet = 1 ]
     then
       echo "$1"
   fi
}

#There are ranges below 22000 which netstat does not detect
portscan()
{
for((j=65400;j<=65420;++j))
do
if [ "$platform" = "Darwin"  ]
  then
    tport=`netstat -a | grep $j`
  else
    tport=`netstat -l | grep $j`
fi    
    if [ "${tport:-FALSE}" = FALSE ] && [ ! -f /tmp/.Luv_$j ] ; then
    	echo "-n $j"
	return
    fi    
done
return
}
usage="Usage: plexiltest [-p <plan>] [-s] [-v [-h <hostname>] [-n <portnumber>] [-b]] [-d <debug file>] \
[-eprompt] [-wprompt] [-log <log file>] [-ch] [-c <interface config>] [-l <library>]* \n\n\
For more options enter 'plexiltest -help'"

help="Options:\n\
\n\
 -p | -plan <plan> \n\
\t	specify PLEXIL plan (required) \n\
 -s | -script <script> \n\
\t 	specifies an script file\n\
 -q | -quiet \n\
\t 	suppresses a leading printed summary and default debug messages.\n\
 -v | -viewer \n\
\t 	requests that plan state be transmitted to the UE viewer.\n\
 -h | -hostname <name> \n\
\t 	hostname of viewer\n\
 -n | -port <number> \n\
\t 	portnumber of viewer\n\
 -b | -blocking \n\
\t 	enables breakpoints in viewer (recommended)\n\
 -d | -debug <file name> \n\
\t 	debug file (default is Debug.cfg)\n\
 -ch | -check \n\
\t 	runs the PLEXIL static checker prior to executing plan\n\
 -l | -library <file name>\n\
\t 	specifies a plan library (.plx file)\n\
 -e | -error \n\
 \t	runs debugger if plan hits a c++ error\n\
 -w | -warning \n\
 \t	runs debugger if plan hits a c++ warning\n\
 -? | -help \n\
\t	shows this message of options"
# -a used only for viewer acquire PID

. $PLEXIL_HOME/bin/plexil-setup.sh

#separate command-line from plexexec output
echo
if [ $PLEXIL_EXECUTABLE ]
then
    prog=$PLEXIL_EXECUTABLE
elif [ -f $PLEXIL_HOME/bin/TestExec ]
then
    prog=$PLEXIL_HOME/bin/TestExec
elif [ -f $PLEXIL_HOME/src/apps/TestExec/TestExec ]
then
    prog=$PLEXIL_HOME/src/apps/TestExec/TestExec
else
    checkWarn "Test Executive executable not found, aborting"
fi

$PLEXIL_HOME/bin/plexil-check-prog $prog

platform=`uname`
quiet=1 #quiet default
plan_nm="" #plan name
plan_cmd="" #plan command
script_nm="" #script name
script_cmd="" #script command
libraries="" #library files
debug_file="" #debug file
check="false" #run static checker
DEFAULT_PORT=9787
DEFAULT_HOST=127.0.0.1

if [ ! $1 ]
  then
  echo -e $usage
  exit 1
fi

for i in $*
do
    save=$1
    case $1 in
        -quiet | -q ) quiet=0;;	
	-p | -plan ) shift
	plan_nm=$1
	plan_cmd="-p $1";;
	-s | -script ) shift
	script_nm=$1;;
	-l | -library ) shift
	valid $1
	libraries="$libraries -l $1";;
	-d | -debug ) shift
	valid $1
	debug_file="-d $1";;
	-help ) echo -e $help
	  exit 2;;
	-v | -viewer ) viewer="-v";;	#luv listener enabled	
	-h | -hostname ) shift
	validNum $1 $save
	host_in="-h $1";;	#luv host name
	-n | -port ) shift
	validNum $1 $save
	port_in="-n $1"
	skip=1;;	#luv port
	-b | -blocking ) block="-b";;	#enable luv break point	
	-ch | -check ) check="true";;
	-e | -errors) err="-eprompt";;
	-w | -warnings) warning="-wprompt";;
	-log ) log_file="-log $1";;
	-a ) automate="true";;
	-? ) echo 'Error: missing argument for option' $1
	  echo -e $usage
	  exit 2;;
    esac
    shift
done

# Check if user typed invalid plan
if [ ! -e "$plan_nm" ] || [ "$plan_nm" = "" ]
  then
        echo Error: Plan $plan_nm, does not exist.
        exit 1    
fi

#host workaround to skip pass thru check
if [ ! "$host_in" = "" ]
  then
  skip=""
fi

# Check pass thru port into viewer
if [ "$viewer" = "-v" ] && [ "$skip" = "1" ]
  then
  temphelper=$port_in  
  if [ "${port_in//[^0-9]/}" -lt 1024 ] && [ $quiet = 1 ] ; then
    echo "Warning: ${port_in//[^0-9]/} is within frequently used port range, usage of this port is not recommended"
  fi
  if [ "$platform" = "Darwin"  ]
  then
    testOpen=`netstat -a | grep ${temphelper//[^0-9]}`
  else
    testOpen=`netstat -l | grep ${temphelper//[^0-9]}`
  fi
  if [ "$testOpen" = "" ] ; then
      warn "Warning: script may not detect ports listening < 22000"      
    if [ ${temphelper//[^0-9]} -gt 22000 ] ; then
      echo "local Viewer is not listening on ${temphelper//[^0-9]}, exiting"
      exit 1
    fi
  fi
fi

#host re-enable to pass check
if [ ! "$host_in" = "" ]
  then
  skip=1
fi
  
# Check for port number
if [ "$viewer" = "-v" ] ; then
  host=${host_in:="-h $DEFAULT_HOST"}
  port=${port_in:=`portscan`}
    if [ "$port" = "" ] ; then
      echo "Exceeds Maximum number of allowable viewer instances.  Please close
      an instance prior to execution"
      exit 1
  fi
  if [ "$skip" = "" ] ; then
    luv ${port//[^0-9]/}
    until [ -f /tmp/.Luv_${port//[^0-9]/} ]
      do
	:
    done    
    if [ "$platform" = "Darwin" ] ; then
      sleep 1
    else    
      usleep 500
    fi
  elif [ "$automate" = "" ] ; then
    if [ ! -f /tmp/.Luv_${port//[^0-9]/} ] && [ $quiet = 1 ] ; then
      echo "Warning: Viewer is not listening on port ${port//[^0-9]/}"
    fi
  fi      
fi

if [ ! "$viewer" = "-v" ] && [ "$port_in" ] ; then
  echo "Error: -n option requires Viewer, please add -v option"
  exit 1
fi

# Run default debug
if [ "$debug_file" = "" ] && [ $quiet = 1 ]
  then
    debug_file="-d Debug.cfg"
fi

# Check plan for errors
if [ "$check" = "true" ] && [ -f $PLEXIL_HOME/bin/checkDecls ]
  then 
       echo "Checking Plan..."
       $PLEXIL_HOME/bin/checkDecls $plan_nm
       if [ ! -e "$plan_nm" ] && [ $? -gt 0 ]
         then
	   echo Error: $plan_nm, contains runtime error
           exit 1
	fi
    elif [ ! -f $PLEXIL_HOME/bin/checkDecls ]
      then
	echo Error: $PLEXIL_HOME/bin/checkDecls not found.	
	exit 1
fi  

# Default simulation script
script_def=$PLEXIL_HOME/src/apps/TestExec/test/scripts/empty-script.plx

# The plan file's extension, used to compute guessed script name.
ext=".`echo $plan_nm | awk -F. '{print $2}'`"

# Alternate script candidates
script1=`basename $plan_nm $ext`-script.plx
script2=`basename $plan_nm $ext`_script.plx
script3=script-`basename $plan_nm $ext`.plx
script4=script_`basename $plan_nm $ext`.plx

# If no more arguments, or next argument -l, check for candidate scripts.
# Otherwise, next argument must be script.

if [ ! -e $script_nm ] || [ "$script_nm" = "" ]
  then
    guess_script=1
    else
      guess_script=0      
fi

if [ $guess_script -eq 1 ]
  then
    for s in $script1 $script2 $script3 $script4
      do
        echo $s
        if [ -e $s ]
          then
            script_nm=$s
            break
          elif [ -e scripts/$s ]
            then
              script_nm=scripts/$s
              break
        fi
    done
fi

if [ ! -e $script_nm ] || [ "$script_nm" = "" ]
        then
          warn "Error: Script $script_nm does not exist.  Using Default"
	  script_nm=$script_def
      fi

# Print summary if desired
if [ $quiet -eq 1 ] 
  then
    echo Running executive from $PLEXIL_HOME
    echo "  Plan:      $plan_nm"
    echo "  Script:    $script_nm"
    echo "  Libraries: $libraries"
    echo "  PORT:      ${port//[^0-9]/}"    
    echo
fi

if [ "$automate" = "true" ]
  then    
    $prog $plan_cmd -s $script_nm $debug_file $libraries $err $warning $log_file $viewer $host $port $block &
    echo "RUN_UE_PID$!"
    trap "{ kill $!; }" SIGINT
  else     
    $prog $plan_cmd -s $script_nm $debug_file $libraries $err $warning $log_file $viewer $host $port $block
fi

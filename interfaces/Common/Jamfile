
SubDir interfaces Common ;

if ! $(PLEXIL_INTFCS_READY) {

# reference common library directories
# *** unfortunately the references to relative paths only work
# when executing in this directory!! ***
LINKFLAGS += [ FLibDirFlags [ FDirName $(PLEXIL_ROOT) universal-exec lib ] ]
             ;

Module PlexilInterface ;

ModuleLibraries PlexilInterface : 
  $(PTHREADS_LIBRARY) $(SEM_LIBRARY)
  [ FVariantName Exec PlexilUtils PlexilTinyXml Sockets : $(VARIANTS) ]
 ;

SubInclude interfaces Common base ;
SubInclude interfaces Common component ;

} # PLEXIL_INTFCS_READY


SubDir interfaces ;

if ! $(PLEXIL_INTFCS_READY) {

PLEXIL_ROOT = [ FDirName $(interfaces) $(DOTDOT) ] ;

# reference common library directories
# *** unfortunately the references to relative paths only work
# when executing in this directory!! ***
LINKFLAGS += [ FLibDirFlags [ FDirName $(PLEXIL_ROOT) universal-exec lib ] ]
             ;

# point to relevant UE headers
HDRS += [ FDirName $(PLEXIL_ROOT) universal-exec Exec ]
        [ FDirName $(PLEXIL_ROOT) universal-exec Exec base ]
        [ FDirName $(PLEXIL_ROOT) universal-exec Exec component ]
        [ FDirName $(PLEXIL_ROOT) universal-exec TinyXml base ]
        [ FDirName $(PLEXIL_ROOT) universal-exec Utils ]
        [ FDirName $(PLEXIL_ROOT) universal-exec Utils base ]
        [ FDirName $(PLEXIL_ROOT) universal-exec Utils component ]
        ;

SubInclude interfaces Common ;
SubInclude interfaces Sockets ;
SubInclude interfaces LuvListener ;

} # PLEXIL_INTFCS_READY

;; File: $SVNROOT/examples/multi-exec/agents/lib/get-real.pli

(plexil-plan
  (sequence "get-real"
    (interface (inout (string "name") (string "type") (real "real")))
    (variables (boolean "debug" true)
               (string "lib-name" ".lib/get-real"))
    (when (boolvar "debug")
      (command "print" "[" (stringvar "name") (stringvar "lib-name") "] sent: " (stringvar "type") "\n"))
    (action "get-real-value"
      (end-condition (not (= 0.0 (realvar "real"))))
      (command-with-return (realvar "real") "state-request" (stringvar "type")))
    (when (boolvar "debug")
      (command "print" "[" (stringvar "name") (stringvar "lib-name") "] recv: " (realvar "real") "\n"))))


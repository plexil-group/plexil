;; File: $SVNROOT/examples/multi-exec/agents/lib/get-int.pli

(plexil-plan
  (sequence "int-request"
    (interface (inout (string "name") (string "type") (integer "intval")))
    (variables (boolean "debug" true))
    (when (boolvar "debug")
      (command "print" "[" (stringvar "name") ".int-request] sent: " (stringvar "type") "\n"))
    (action "get-int-value"
      (end-condition (not (= 0.0 (intvar "intval"))))
      (command-with-return (intvar "intval") "state-request" (stringvar "type")))
    (when (boolvar "debug")
      (command "print" "[" (stringvar "name") ".int-request] recv: " (intvar "intval") "\n"))))


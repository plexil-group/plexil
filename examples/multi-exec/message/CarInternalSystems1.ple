// A small extension of CarInternalSystems.ple

CarInternalSystems:
{
  NodeList:
    StartEngine: {
     StartCondition: MessageReceived("StartCar");
     // start the car
     Command: SendMessage("CarStarted");
    }

    StartHeater: {
     StartCondition: MessageReceived("StartCar");
     Command: SendMessage("HeaterStarted");
    }

    StartRadio: {
     StartCondition: MessageReceived("StartCar");
     // start the radio
     Command: SendMessage("RadioStarted");
    }
}
